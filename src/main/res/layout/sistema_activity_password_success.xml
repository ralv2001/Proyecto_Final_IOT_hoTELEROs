<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".auth.password.SuccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="25dp"
        android:layout_centerInParent="true">

        <!-- Icono de éxito -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_exitaso_correito"
            android:layout_marginBottom="24dp"
            android:contentDescription="Icono de check" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Éxito!"
            android:textSize="24sp"
            android:textColor="#1E1E1E"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="-0.025"
            android:layout_marginBottom="16dp"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Felicidades!, su contraseña ha sido restablecida.\nHaga clic en Continuar para iniciar sesión."
            android:textSize="16sp"
            android:textColor="#989898"
            android:fontFamily="@font/inter_semibold"
            android:letterSpacing="-0.025"
            android:lineSpacingExtra="4sp"
            android:gravity="center"
            android:layout_marginBottom="48dp"/>

        <!-- Botón para continuar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="12dp"
            android:text="Continuar"
            android:paddingVertical="18dp"
            style="@style/ButtonTextStyle" />

    </LinearLayout>
</RelativeLayout>