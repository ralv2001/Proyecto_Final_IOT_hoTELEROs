<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ENCABEZADO: Nombre hotel y calificación -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hotel Grand Plaza"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutRating" />

        <!-- Calificación con estrella -->
        <LinearLayout
            android:id="@+id/layoutRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/tvHotelName"
            app:layout_constraintBottom_toBottomOf="@id/tvHotelName"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivStarIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                app:tint="#FFD700" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.9"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nombre del cliente (NUEVO) -->
        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: Carlos Mendoza"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvHotelName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- SECCIÓN DE IMAGEN Y PRECIO JUNTOS -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvClientName">

            <!-- Imagen del hotel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.60">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivHotelImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/belmond"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hotel_image_gradient"/>

                    <!-- Estado del servicio -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próximo"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_status_pill"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_margin="8dp"/>

                    <!-- Fecha y ubicación -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:padding="8dp">

                        <!-- Fecha -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_translucent_pill"
                            android:gravity="center_vertical"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:layout_marginBottom="4dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="15 Mar, 14:30"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Ubicación -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_translucent_pill"
                            android:gravity="center_vertical"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_location"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Miraflores"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contenedor de precio y tiempo -->
            <!-- Contenedor de precio y tiempo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/imageCardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageCardView"
                app:layout_constraintBottom_toBottomOf="@id/imageCardView">

                <!-- Precio -->
                <TextView
                    android:id="@+id/tvPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="#757575"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/50.00"
                    android:textColor="#FF5722"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Tiempo estimado (NUEVO) -->
                <TextView
                    android:id="@+id/tvEstimatedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo estimado"
                    android:textColor="#757575"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEstimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 min"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- Enlace Ver detalles (NUEVO) -->
                <TextView
                    android:id="@+id/tvViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver detalles"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- INFORMACIÓN DE ORIGEN Y DESTINO -->
        <LinearLayout
            android:id="@+id/routeInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_info_container"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/imageContainer">

            <!-- Origen y destino con iconos verticales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Línea de ruta con iconos -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_hotel"
                        android:layout_marginBottom="1dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_aiport"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

                <!-- Direcciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOriginAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Grand Plaza, Av. Principal 123"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvDestinationAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aeropuerto Internacional Jorge Chávez"
                        android:textSize="13sp"
                        android:textColor="#333333"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- BOTÓN DE ACCIÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar viaje"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/routeInfoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>