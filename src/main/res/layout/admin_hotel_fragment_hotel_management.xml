<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER MODERNO -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_header_gradient_modern"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvSubtitle" />

        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Panel de Control"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hotel Belmond • Dashboard Admin"
            android:textSize="16sp"
            android:textColor="#E8EAED"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TÍTULO ESTADÍSTICAS -->
        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Métricas de Hoy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- GUIDELINES PARA GRID RESPONSIVO -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.67" />

        <!-- CARD OCUPACIÓN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOcupacion"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:rippleColor="@color/white_50"
            app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline33">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_info_card_gradient"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivOcupacionIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_hotel"
                    android:alpha="0.8"
                    app:tint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvOcupacionValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvOcupacionLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivOcupacionIcon"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvOcupacionLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ocupación"
                    android:textSize="12sp"
                    android:textColor="#E8EAED"
                    android:fontFamily="@font/inter_regular"
                    app:layout_constraintTop_toBottomOf="@id/tvOcupacionValue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivOcupacionIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CARD INGRESOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIngresos"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:rippleColor="@color/white_50"
            app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
            app:layout_constraintStart_toStartOf="@id/guideline33"
            app:layout_constraintEnd_toStartOf="@id/guideline66">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/city_card_gradient"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivIngresosIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_payment"
                    android:alpha="0.8"
                    app:tint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvIngresosValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="S/12.4K"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvIngresosLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivIngresosIcon"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvIngresosLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ingresos"
                    android:textSize="12sp"
                    android:textColor="#E8EAED"
                    android:fontFamily="@font/inter_regular"
                    app:layout_constraintTop_toBottomOf="@id/tvIngresosValue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivIngresosIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CARD HUÉSPEDES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHuespedes"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:rippleColor="@color/white_50"
            app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
            app:layout_constraintStart_toStartOf="@id/guideline66"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay_profile"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivHuespedesIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group"
                    android:alpha="0.8"
                    app:tint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvHuespedesValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="34"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvHuespedesLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivHuespedesIcon"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvHuespedesLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Huéspedes"
                    android:textSize="12sp"
                    android:textColor="#E8EAED"
                    android:fontFamily="@font/inter_regular"
                    app:layout_constraintTop_toBottomOf="@id/tvHuespedesValue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivHuespedesIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- TÍTULO GESTIÓN -->
        <TextView
            android:id="@+id/tvManagementTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gestión del Hotel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardOcupacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- GUIDELINES PARA GESTIÓN (50-50) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- HABITACIONES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHabitaciones"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:rippleColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/tvManagementTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline50">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <View
                    android:id="@+id/iconBgHab"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_orange_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_room"
                    app:tint="@color/orange"
                    app:layout_constraintTop_toTopOf="@id/iconBgHab"
                    app:layout_constraintBottom_toBottomOf="@id/iconBgHab"
                    app:layout_constraintStart_toStartOf="@id/iconBgHab"
                    app:layout_constraintEnd_toEndOf="@id/iconBgHab" />

                <TextView
                    android:id="@+id/tvHabTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iconBgHab"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gestionar reservas"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHabTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SERVICIOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardServicios"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:rippleColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/tvManagementTitle"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <View
                    android:id="@+id/iconBgServ"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_orange_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_service_wifi"
                    app:tint="@color/orange"
                    app:layout_constraintTop_toTopOf="@id/iconBgServ"
                    app:layout_constraintBottom_toBottomOf="@id/iconBgServ"
                    app:layout_constraintStart_toStartOf="@id/iconBgServ"
                    app:layout_constraintEnd_toEndOf="@id/iconBgServ" />

                <TextView
                    android:id="@+id/tvServTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Servicios"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iconBgServ"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Administrar servicios"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvServTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- PERFIL HOTEL -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPerfilHotel"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:rippleColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/cardHabitaciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline50">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <View
                    android:id="@+id/iconBgPerfil"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_orange_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_hotel"
                    app:tint="@color/orange"
                    app:layout_constraintTop_toTopOf="@id/iconBgPerfil"
                    app:layout_constraintBottom_toBottomOf="@id/iconBgPerfil"
                    app:layout_constraintStart_toStartOf="@id/iconBgPerfil"
                    app:layout_constraintEnd_toEndOf="@id/iconBgPerfil" />

                <TextView
                    android:id="@+id/tvPerfilTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Perfil Hotel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iconBgPerfil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Configuración"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPerfilTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ESTADÍSTICAS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEstadisticas"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:rippleColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/cardServicios"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <View
                    android:id="@+id/iconBgEstad"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_orange_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_reportes"
                    app:tint="@color/orange"
                    app:layout_constraintTop_toTopOf="@id/iconBgEstad"
                    app:layout_constraintBottom_toBottomOf="@id/iconBgEstad"
                    app:layout_constraintStart_toStartOf="@id/iconBgEstad"
                    app:layout_constraintEnd_toEndOf="@id/iconBgEstad" />

                <TextView
                    android:id="@+id/tvEstadTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iconBgEstad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Análisis y métricas"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvEstadTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>