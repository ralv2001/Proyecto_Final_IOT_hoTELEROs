<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="24dp"
    android:background="@android:color/white">

    <!-- Header section with consistent margins matching hotel info container -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="0dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios del hotel"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubre todo lo que tenemos para ti"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_see_all_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver todas"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:fontFamily="@font/poppins_regular"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Services grid with consistent margins matching hotel content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_services_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/client_item_service_preview"
        tools:itemCount="4" />

</androidx.constraintlayout.widget.ConstraintLayout>