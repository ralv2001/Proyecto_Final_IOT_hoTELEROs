<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <!-- HEADER COMPACTO Y INTELIGENTE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_compact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- RESUMEN INTELIGENTE EN UNA LÍNEA -->
        <LinearLayout
            android:id="@+id/search_summary_compact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintEnd_toStartOf="@id/iv_expand_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_search_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destinos disponibles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tv_search_summary_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas las ubicaciones • 2 días • 2 huéspedes"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_expand_details"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_expand_more"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#FF5722" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- DETALLES EXPANDIBLES (CONTENIDO COMPLETO) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_search_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_compact">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Ubicación Detallada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_circle_orange"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESTINO"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tv_location_detailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todas las ubicaciones"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginVertical="8dp" />

            <!-- Fechas Detalladas -->
            <LinearLayout
                android:id="@+id/layout_dates_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_circle_orange"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <!-- Check-in -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTRADA"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tv_check_in_detailed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Separador -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:background="#E0E0E0" />

                    <!-- Check-out -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SALIDA"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tv_check_out_detailed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mañana"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginVertical="8dp" />

            <!-- Huéspedes Detallados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_circle_orange"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_group"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HUÉSPEDES"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tv_guests_detailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 adultos · 0 niños"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Botón Modificar Búsqueda -->
            <LinearLayout
                android:id="@+id/btn_modify_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_button_outline2"
                android:paddingVertical="14dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#FF5722"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar búsqueda"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:fontFamily="@font/poppins_semibold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- FILTROS INTELIGENTES -->
    <LinearLayout
        android:id="@+id/layout_smart_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_search_details">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_quick_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacingHorizontal="8dp" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_results_count_inline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:background="@drawable/bg_rounded_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- LISTA DE RESULTADOS (MÁS ESPACIO) -->
    <!-- ✅ CORRECTO: -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FBFBFB"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layout_smart_filters"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>