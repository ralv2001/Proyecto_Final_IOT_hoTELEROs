<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/orange_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Contenido Principal del Servicio -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Ícono del Servicio con Background Circular -->
            <LinearLayout
                android:id="@+id/serviceIconContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_green"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/serviceInfoContainer">

                <ImageView
                    android:id="@+id/ivServiceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wifi"
                    app:tint="@android:color/white"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_wifi" />

            </LinearLayout>

            <!-- Contenido de Información -->
            <LinearLayout
                android:id="@+id/serviceInfoContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/serviceIconContainer"
                app:layout_constraintEnd_toStartOf="@id/actionButtonsContainer"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi Gratuito"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="WiFi Gratuito" />

                <TextView
                    android:id="@+id/tvServiceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Internet de alta velocidad"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Internet de alta velocidad en todas las áreas" />

                <!-- Badge de Fotos con Click -->
                <!-- Badge de Fotos con Click - ESTILO MODERNO -->
                <LinearLayout
                    android:id="@+id/photoBadgeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_chip_modern_photos"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect_green"
                    android:elevation="0dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/bg_circle_white_semi"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_photo"
                            app:tint="@color/green" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPhotoCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 fotos"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        tools:text="3 fotos" />

                    <ImageView
                        android:id="@+id/ivExpandIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="#1A1A1A"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Contenedor de Botones de Acción -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/serviceIconContainer"
                app:layout_constraintBottom_toBottomOf="@id/serviceIconContainer">

                <!-- Botón de Eliminar -->
                <LinearLayout
                    android:id="@+id/removeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_red_light"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect">

                    <ImageView
                        android:id="@+id/ivRemove"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/red"
                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Sección de Fotos Expandible -->
        <LinearLayout
            android:id="@+id/photosExpandableSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F8F9FA"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            tools:visibility="gone">

            <!-- Divisor superior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Header de la sección de fotos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gallery"
                    app:tint="@color/blue"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Galería del Servicio"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvPhotosCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 de 3"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_regular"
                    tools:text="3 de 3" />

            </LinearLayout>

            <!-- RecyclerView horizontal para las fotos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServicePhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp"
                tools:listitem="@layout/admin_hotel_item_basic_service_photo" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>