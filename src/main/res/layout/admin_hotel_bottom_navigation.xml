<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_bottom_navigation"
    android:orientation="horizontal"
    android:elevation="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_gravity="bottom"
    android:gravity="center">

    <!-- Botón Hotel -->
    <LinearLayout
        android:id="@+id/nav_hotel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_hotel"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_hotel"
            app:tint="#FA5D31" />
    </LinearLayout>

    <!-- Botón Checkout -->
    <LinearLayout
        android:id="@+id/nav_checkout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_checkout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_checkout"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Botón Chat -->
    <LinearLayout
        android:id="@+id/nav_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chat"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Botón Reportes -->
    <LinearLayout
        android:id="@+id/nav_reports"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_reports"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_reportes"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Botón Taxi -->
    <LinearLayout
        android:id="@+id/nav_taxi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_taxi"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_taxi"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Botón Perfil -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_user"
            app:tint="#FFFFFF" />
    </LinearLayout>

</LinearLayout>