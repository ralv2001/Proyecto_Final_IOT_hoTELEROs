<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Status Bar -->
        <View
            android:id="@+id/statusBar"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Priority Indicator -->
        <ImageView
            android:id="@+id/ivPriorityIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_priority_high"
            app:tint="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@id/statusBar"
            app:layout_constraintEnd_toStartOf="@id/ivPriorityIndicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Header con estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/orange" />

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Checkout Pendiente"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/poppins_semibold" />

            </LinearLayout>

            <!-- Información principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombreHuesped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="María González"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvHabitacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habitación 305"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvFechas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14/06/2024 - 17/06/2024"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/bg_stats_container">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/green" />

                    <TextView
                        android:id="@+id/tvNoches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 noches"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/inter_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estancia"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_service_wifi"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/tvServiciosCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 servicios"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/inter_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adicionales"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <View
                    android:id="@+id/viewDividerDanos"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Sección de daños - Ahora con ID para control de visibilidad -->
                <LinearLayout
                    android:id="@+id/llDanosSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_info_outline"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/tvDanosCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 daños"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/inter_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportados"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

            </LinearLayout>

            <!-- Total y acciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total a cobrar"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/inter_regular" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 1,250.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:fontFamily="@font/poppins_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_button_outline_modern"
                        android:paddingHorizontal="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_visibility"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/inter_semibold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnProcessCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_button_orange_modern"
                        android:paddingHorizontal="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_payment"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Procesar"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/inter_semibold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>