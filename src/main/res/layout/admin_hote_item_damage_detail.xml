<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_damage_item"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/ivDamageIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_info_outline"
        app:tint="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/damageInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDamageIcon"
        app:layout_constraintEnd_toStartOf="@id/damageCostContainer">

        <TextView
            android:id="@+id/tvDamageDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mancha en alfombra"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/inter_medium" />

        <TextView
            android:id="@+id/tvDamageDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravedad: Leve • Reportado: 29/06/2024"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/inter_regular" />

        <TextView
            android:id="@+id/tvDamageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Confirmado por administración"
            android:textSize="11sp"
            android:textColor="@color/green"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/damageCostContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDamageCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 80.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:fontFamily="@font/inter_semibold" />

        <ImageView
            android:id="@+id/ivEditDamage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/orange"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>