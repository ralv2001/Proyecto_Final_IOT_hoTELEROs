<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icono del servicio -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/orange_light"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi"
            app:tint="@color/orange_primary" />
    </androidx.cardview.widget.CardView>

    <!-- Información del servicio -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi Premium"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold" />

        <TextView
            android:id="@+id/tv_service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conexión de alta velocidad en todas las áreas"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_service_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Característica 1\n• Característica 2"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Indicador de fotos -->
    <ImageView
        android:id="@+id/iv_has_photos"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_gallery"
        android:visibility="gone"
        app:tint="@color/text_secondary" />
</LinearLayout>