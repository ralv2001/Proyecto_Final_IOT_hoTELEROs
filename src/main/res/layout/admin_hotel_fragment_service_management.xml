<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header con el mismo diseño del perfil -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Volver -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="🛎️ Gestión de Servicios"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenido Principal Scrollable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÓN: SERVICIOS BÁSICOS (desde perfil del hotel) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de Servicios Básicos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_hotel"
                            app:tint="@color/orange"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🛏️ Servicios Básicos"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incluido - Básico"
                            android:textSize="12sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:background="@drawable/bg_chip_orange"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios agregados desde el perfil del hotel. Estos se incluyen automáticamente en todas las habitaciones."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Container para servicios básicos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para servicios básicos -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBasicServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:minHeight="100dp"
                            android:visibility="gone"
                            tools:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_basic_service" />

                        <!-- Estado vacío para servicios básicos -->
                        <LinearLayout
                            android:id="@+id/layoutBasicServicesEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega servicios básicos"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÓN: SERVICIOS INCLUIDOS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de Servicios Incluidos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="✅ Servicios Incluidos"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incluido"
                            android:textSize="12sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:background="@drawable/bg_chip_green"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios gratuitos incluidos en la estadía del huésped."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Container para servicios incluidos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para Servicios Incluidos -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvIncludedServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_service_management" />

                        <!-- Estado vacío para servicios incluidos -->
                        <LinearLayout
                            android:id="@+id/layoutIncludedServicesEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega servicios incluidos"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Servicios Incluidos -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddIncludedService"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Agregar Servicios Incluidos"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/green"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add_service"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÓN: SERVICIOS DE PAGO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de Servicios de Pago -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_payment"
                            app:tint="@color/blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="💳 Servicios de Pago"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="De Pago"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:background="@drawable/bg_chip_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios adicionales que tienen un costo para el huésped."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Container para servicios de pago -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para Servicios de Pago -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPaidServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_service_management" />

                        <!-- Estado vacío para servicios de pago -->
                        <LinearLayout
                            android:id="@+id/layoutPaidServicesEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega servicios de pago"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Servicios de Pago -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPaidService"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Agregar Servicios de Pago"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/blue"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add_service"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÓN: SERVICIOS CONDICIONALES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/purple"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de Servicios Condicionales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_conditional"
                            app:tint="@color/purple"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="⚡ Servicios Condicionales"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condicional"
                            android:textSize="12sp"
                            android:textColor="@color/purple"
                            android:textStyle="bold"
                            android:background="@drawable/bg_chip_purple"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios que dependen de la cantidad de huéspedes en la habitación."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Container para servicios condicionales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para Servicios Condicionales -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvConditionalServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_service_management" />

                        <!-- Estado vacío para servicios condicionales -->
                        <LinearLayout
                            android:id="@+id/layoutConditionalServicesEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega servicios condicionales"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Servicios Condicionales -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddConditionalService"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Agregar Servicios Condicionales"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/purple"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add_service"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>