<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/icon_bill"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_clock"
        android:background="@drawable/bg_circle_orange"
        android:padding="12dp"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factura Pendiente de Aprobación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/icon_bill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El hotel está revisando tu estadía. Recibirás la factura final una vez completada la revisión."
        android:textSize="15sp"
        android:textColor="#757575"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message">

        <TextView
            android:id="@+id/tv_bill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏨 Casa Andina Premium\n📅 20 Abr - 27 Abr, 2025\n🏠 Suite Premium (#3045)\n\n💰 DESGLOSE:\n• Habitación: S/1350.00\n• Room service (x2): S/240.00\n• Lavandería express: S/45.00\n• Minibar premium: S/85.00\n• Reparación menor: S/150.00\n\n💳 TOTAL: S/1870.00"
            android:textSize="13sp"
            android:textColor="#757575"
            android:background="@drawable/bg_info_container"
            android:padding="16dp"
            android:fontFamily="@font/inter_regular"
            android:lineSpacingExtra="2dp" />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>