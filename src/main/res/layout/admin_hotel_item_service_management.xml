<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/orange_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Contenido Principal del Servicio -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Ícono del Servicio con Background Circular -->
            <LinearLayout
                android:id="@+id/serviceIconContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_orange"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/serviceInfoContainer">

                <ImageView
                    android:id="@+id/ivServiceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_service_default"
                    app:tint="@android:color/white"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_wifi" />

            </LinearLayout>

            <!-- Contenido de Información -->
            <LinearLayout
                android:id="@+id/serviceInfoContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/serviceIconContainer"
                app:layout_constraintEnd_toStartOf="@id/optionsButton"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Nombre del Servicio -->
                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi Gratuito"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="WiFi Gratuito" />

                <!-- Descripción del Servicio -->
                <TextView
                    android:id="@+id/tvServiceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conexión Wi-Fi gratuita en todas las áreas"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Conexión Wi-Fi gratuita en todas las áreas" />

                <!-- Información de Precio/Tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <!-- Badge de Tipo -->
                    <TextView
                        android:id="@+id/tvServiceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incluido"
                        android:textSize="11sp"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:background="@drawable/bg_chip_green"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        tools:text="Incluido" />

                    <!-- Precio (solo para servicios de pago) -->
                    <TextView
                        android:id="@+id/tvServicePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:text="$25.00"
                        tools:visibility="visible" />

                    <!-- Información condicional -->
                    <TextView
                        android:id="@+id/tvConditionalInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más de 2 huéspedes"
                        android:textSize="11sp"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:background="@drawable/bg_chip_purple"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:text="Más de 2 huéspedes"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botón de Opciones (Menú) -->
            <ImageView
                android:id="@+id/optionsButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="@drawable/bg_circle_light_gray"
                android:padding="6dp"
                app:tint="@color/text_secondary"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/serviceInfoContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Galería de Fotos (cuando existen) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvServicePhotos"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingHorizontal="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:listitem="@layout/admin_hotel_item_basic_service_photo" />

        <!-- Línea divisoria sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:id="@+id/dividerLine" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>