<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Header principal del servicio -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/serviceInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Container del icono del servicio -->
            <LinearLayout
                android:id="@+id/serviceIconContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_orange"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Imagen del icono del servicio -->
                <ImageView
                    android:id="@+id/ivServiceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_room_service"
                    app:tint="@android:color/white"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_room_service" />

            </LinearLayout>

            <!-- Información del servicio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/serviceIconContainer"
                app:layout_constraintEnd_toStartOf="@id/optionsButton"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Nombre del servicio -->
                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de Habitación"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Servicio de Habitación" />

                <!-- Descripción del servicio -->
                <TextView
                    android:id="@+id/tvServiceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción del servicio disponible"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:text="Descripción del servicio disponible"
                    tools:visibility="visible" />

                <!-- Container para badges y precio -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Badge de tipo de servicio -->
                    <TextView
                        android:id="@+id/tvServiceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incluido"
                        android:textSize="11sp"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:background="@drawable/bg_chip_green"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        tools:text="Incluido" />

                    <!-- Precio del servicio -->
                    <TextView
                        android:id="@+id/tvServicePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:text="$15.00"
                        tools:visibility="visible" />

                    <!-- Información condicional -->
                    <TextView
                        android:id="@+id/tvConditionalInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más de 2 huéspedes"
                        android:textSize="11sp"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:background="@drawable/bg_chip_purple"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:text="Más de 2 huéspedes"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- BOTÓN DE FOTOS (EXACTO como en servicios básicos) -->
                <LinearLayout
                    android:id="@+id/photoBadgeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_chip_modern_photos"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect_green"
                    android:elevation="0dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/bg_circle_white_semi"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_photo"
                            app:tint="@color/green" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPhotoCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 fotos"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        tools:text="3 fotos" />

                    <ImageView
                        android:id="@+id/ivExpandIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="#1A1A1A"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botón de Opciones (Menú) -->
            <ImageView
                android:id="@+id/optionsButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="@drawable/bg_circle_light_gray"
                android:padding="6dp"
                app:tint="@color/text_secondary"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/serviceIconContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Sección de Fotos Expandible (EXACTA como en servicios básicos) -->
        <LinearLayout
            android:id="@+id/photosExpandableSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F8F9FA"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            tools:visibility="gone">

            <!-- Divisor superior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Header de la sección de fotos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gallery"
                    app:tint="@color/blue"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Galería del Servicio"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvPhotosCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 de 3"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_regular"
                    tools:text="3 de 3" />

            </LinearLayout>

            <!-- RecyclerView horizontal para las fotos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServicePhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp"
                tools:listitem="@layout/admin_hotel_item_basic_service_photo" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>