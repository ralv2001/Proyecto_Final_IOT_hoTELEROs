<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/orange_50">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono del Servicio -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardServiceIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivServiceIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_service_default"
                app:tint="@color/orange"
                android:scaleType="centerInside" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Información Principal -->
        <LinearLayout
            android:id="@+id/layoutServiceInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cardServiceIcon"
            app:layout_constraintEnd_toStartOf="@id/layoutServiceActions"
            app:layout_constraintTop_toTopOf="@id/cardServiceIcon">

            <!-- Nombre del servicio -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wi-Fi Gratuito"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Descripción del servicio -->
            <TextView
                android:id="@+id/tvServiceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internet de alta velocidad en todas las habitaciones"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/inter_regular"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <!-- Fila de información adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Etiqueta del tipo de servicio -->
                <TextView
                    android:id="@+id/tvServiceTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incluido"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:background="@drawable/bg_chip_green"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:fontFamily="@font/inter_medium" />

                <!-- Precio del servicio -->
                <TextView
                    android:id="@+id/tvServicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 25.00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- Información condicional -->
            <TextView
                android:id="@+id/tvConditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activo con compras > S/ 500.00"
                android:textSize="12sp"
                android:textColor="@color/purple"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Acciones del servicio (Switch y Menú) -->
        <LinearLayout
            android:id="@+id/layoutServiceActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardServiceIcon">

            <!-- Switch de activación -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchServiceActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/white"
                app:trackTint="@color/switch_track_color"
                android:layout_marginBottom="8dp" />

            <!-- Menú de opciones -->
            <ImageView
                android:id="@+id/ivServiceMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_secondary"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Indicador de Fotos -->
        <LinearLayout
            android:id="@+id/layoutPhotoIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/layoutServiceInfo"
            app:layout_constraintTop_toBottomOf="@id/layoutServiceInfo"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_photo"
                app:tint="@color/blue"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvPhotoCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 fotos"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/inter_medium" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>