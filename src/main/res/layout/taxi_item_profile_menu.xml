<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp">

        <!-- Icono con fondo circular colorido -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_icon_background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#FFF3E0"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_hotel"
                app:tint="#F44336" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Contenido del texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles Disponibles"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_menu_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 hoteles cercanos"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Flecha -->
        <ImageView
            android:id="@+id/iv_menu_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#CCCCCC" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>