<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- 🎨 Contenedor del ícono con fondo circular -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp">

            <!-- Fondo circular (se cambiará dinámicamente) -->
            <View
                android:id="@+id/circle_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_primary_light" />

            <!-- Ícono -->
            <ImageView
                android:id="@+id/iv_quick_access_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_people" />

        </FrameLayout>

        <!-- Título con mejor tipografía -->
        <TextView
            android:id="@+id/tv_quick_access_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar\nUsuarios"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:maxLines="2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>