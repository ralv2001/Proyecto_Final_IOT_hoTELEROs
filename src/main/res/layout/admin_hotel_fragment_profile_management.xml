<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header CORREGIDO para evitar texto cortado -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient_modern"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="28dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"
                app:tint="@color/orange"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Volver" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="1"
                    android:text="游낃 Perfil del Hotel"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gestiona la informaci칩n y servicios"
                    android:textSize="12sp"
                    android:textColor="#E8EAED"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenido Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Secci칩n 1: Informaci칩n B치sica del Hotel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header de la secci칩n SIN BOT칍N -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_orange_light"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_hotel"
                                app:tint="@color/orange" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Informaci칩n del Hotel"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Datos b치sicos del establecimiento"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Campos de entrada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Campo Nombre del Hotel -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            app:boxStrokeColor="@color/orange"
                            app:hintTextColor="@color/orange"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:startIconDrawable="@drawable/ic_hotel"
                            app:startIconTint="@color/orange"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHotelName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre del Hotel"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_regular"
                                android:textColor="#1A1A1A"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                tools:text="Hotel Belmond Miraflores" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Campo Direcci칩n -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/orange"
                            app:hintTextColor="@color/orange"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:startIconDrawable="@drawable/ic_location"
                            app:startIconTint="@color/orange"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHotelAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Direcci칩n del Hotel"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_regular"
                                android:textColor="#1A1A1A"
                                android:inputType="textPostalAddress"
                                android:maxLines="3"
                                android:imeOptions="actionDone"
                                tools:text="Av. Jos칠 Larco 1301, Miraflores, Lima, Per칰" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Secci칩n 2: Galer칤a de Fotos MEJORADA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header SIN BOT칍N - M치s limpio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_accent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_photo"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Galer칤a de Fotos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tvPhotosCounter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 fotos"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_medium"
                                    tools:text="3 fotos" />

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="4dp"
                                    android:layout_marginHorizontal="6dp"
                                    android:background="@drawable/bg_circle_orange" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="M치ximo 10 fotos"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_regular" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Container para fotos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para fotos - SE MUESTRA CUANDO HAY FOTOS -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvHotelPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:visibility="gone"
                            tools:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_photo" />

                        <!-- Estado vac칤o - SE OCULTA CUANDO HAY FOTOS -->
                        <LinearLayout
                            android:id="@+id/emptyPhotosState"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_add_photo"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega fotos de tu hotel"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Las fotos atraen m치s hu칠spedes"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bot칩n DEBAJO del container - CON SU PROPIO ESPACIO -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:text="Agregar Fotos del Hotel"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add_photo"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Indicador de progreso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/orange"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvPhotosStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Las fotos mejoran la visibilidad de tu hotel"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/inter_regular"
                            tools:text="3 de 10 fotos subidas" />

                        <!-- Progreso visual -->
                        <FrameLayout
                            android:id="@+id/progressContainer"
                            android:layout_width="60dp"
                            android:layout_height="6dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_rounded_light_gray"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <View
                                android:id="@+id/progressBar"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_gradient_orange"
                                tools:layout_width="36dp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Secci칩n 3: Servicios B치sicos MEJORADA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header SIN BOT칍N - M치s limpio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_green"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_category"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Servicios B치sicos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="WiFi, TV, Aire Acondicionado y m치s servicios"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Container para servicios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para servicios b치sicos - SE MUESTRA CUANDO HAY SERVICIOS -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBasicServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:minHeight="100dp"
                            android:visibility="gone"
                            tools:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_basic_service" />

                        <!-- Estado vac칤o para servicios - SE OCULTA CUANDO HAY SERVICIOS -->
                        <LinearLayout
                            android:id="@+id/emptyServicesState"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Agrega servicios b치sicos"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bot칩n DEBAJO del container - ALTURA CORREGIDA -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddBasicService"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:text="Agregar Servicios B치sicos"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/green"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add_service"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bot칩n Guardar Cambios - SIN C칈RCULO BLANCO -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="游 Guardar Cambios"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                app:backgroundTint="@color/orange"
                app:cornerRadius="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>