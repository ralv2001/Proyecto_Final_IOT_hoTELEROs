<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">


    <!-- App Bar Layout con efecto de elevación cuando se hace scroll -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:elevation="4dp">


        <!-- Toolbar con título y botón de regreso -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Regresar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios del Hotel"
                    android:textSize="20sp"
                    android:textColor="@color/orange_dark"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!-- Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- Cabecera informativa -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/iv_info_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/orange_primary"/>


                    <TextView
                        android:id="@+id/tv_info_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Servicios disponibles"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange_dark"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@id/iv_info_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_info_icon"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Los servicios marcados como 'Incluido' ya son parte de tu reserva. Los demás servicios pueden ser agregados por un costo adicional."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_title"
                        app:layout_constraintStart_toEndOf="@id/iv_info_icon"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- Lista de servicios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_services_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:paddingBottom="100dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/card_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_service_detail"
                tools:itemCount="5" />


            <!-- Estado vacío (se muestra cuando no hay servicios) -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/card_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_empty_state"
                    android:alpha="0.5"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay servicios disponibles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intenta seleccionar otra categoría"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <!-- Resumen del carrito (aparece cuando hay servicios seleccionados) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:visibility="gone">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="16dp">


            <TextView
                android:id="@+id/tv_cart_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios seleccionados"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/orange_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_cart_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: "
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_summary_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>


            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange_dark"
                app:layout_constraintTop_toTopOf="@id/tv_cart_count_label"
                app:layout_constraintStart_toEndOf="@id/tv_cart_count_label"/>


            <TextView
                android:id="@+id/tv_cart_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_count_label"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 0.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange_primary"
                app:layout_constraintTop_toTopOf="@id/tv_cart_total_label"
                app:layout_constraintStart_toEndOf="@id/tv_cart_total_label"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_service"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Añadir servicios"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                app:backgroundTint="@color/orange_primary"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_add_shopping_cart"
                app:iconGravity="textStart"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_total_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>