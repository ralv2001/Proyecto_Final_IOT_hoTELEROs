<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Date header -->
    <TextView
        android:id="@+id/tvDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Abril"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:padding="8dp"
        android:background="@drawable/bg_date_header"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hotelMessageContainer"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="visible"/>

    <!-- Hotel avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHotelAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_hotel_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/hotelMessageContainer"
        android:layout_marginEnd="8dp" />

    <!-- Hotel message container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hotelMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_hotel"
        android:padding="12dp"
        android:maxWidth="260dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateHeader"
        app:layout_constraintStart_toEndOf="@id/ivHotelAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <!-- Hotel name in the message -->
        <TextView
            android:id="@+id/tvHotelNameInMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Las Palmeras"
            android:textSize="12sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMessageText" />

        <TextView
            android:id="@+id/tvMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/tvHotelNameInMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Este es un mensaje de ejemplo del hotel"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#99000000"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvMessageText"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12:30"/>

        <!-- Status indicators -->
        <ImageView
            android:id="@+id/ivMessageStatus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_message_seen"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvMessageText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"
            app:tint="#4CAF50" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>