<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iconContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@drawable/bg_service_card"
    android:clickable="true"
    android:focusable="true">

    <!-- Contenedor del icono -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp">

        <!-- Fondo circular -->
        <View
            android:id="@+id/iconBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_orange_light"
            android:alpha="0.3" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_service_default"
            app:tint="@color/orange"
            android:scaleType="centerInside" />

        <!-- Indicador de selecciÃ³n -->
        <ImageView
            android:id="@+id/ivSelectionIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_check"
            android:background="@drawable/bg_circle_green"
            android:padding="2dp"
            app:tint="@android:color/white"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvIconName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servicio"
        android:textSize="10sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>