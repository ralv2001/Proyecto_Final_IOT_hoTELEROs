<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taxista.fragment.DriverMapFragment">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Panel de estado (online/offline) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEstadoTaxista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:background="@drawable/card_background_driver"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nueva línea con foto, nombre y notificaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Foto del taxista -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/perfil"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#CCCCCC"/>

                <!-- Nombre del taxista -->
                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Renato Delgado"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"/>

                <!-- Icono de notificaciones -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivNotifications"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_notification"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/tvNotificationBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/notification_badge_bg"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="0"
                        android:visibility="gone"
                        android:layout_gravity="top|end"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp"/>

            <!-- Estado del conductor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvEstadoServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuera de servicio"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disponible para viajes"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/switchDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_dumb_driver"
                    android:track="@drawable/switch_track_driver"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🆕 CARD DE SERVICIO ACTIVO -->
    <!-- 🆕 CARD COMPACTA Y MODERNA -->
    <!-- Card desplegable -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardServicioActivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E8F5E9"
        app:strokeColor="#4CAF50"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardEstadoTaxista">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header clickeable (siempre visible) -->
            <LinearLayout
                android:id="@+id/headerServicioActivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvClienteName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🚕 Juan Pérez - Hotel Plaza"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:id="@+id/tvServiceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● EN CURSO"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/iconExpandCollapse"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="#4CAF50"/>

            </LinearLayout>

            <!-- Contenido expandible -->
            <LinearLayout
                android:id="@+id/contenidoExpandible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:paddingTop="0dp"
                android:visibility="gone">

                <!-- Información detallada -->
                <TextView
                    android:id="@+id/tvHotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏨 Hotel Grand Plaza"
                    android:textSize="14sp"
                    android:textColor="#FF6B35"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDestinationAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📍 Aeropuerto Internacional Jorge Chávez"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDistanceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📏 15.5 km • ⏱️ 25 minutos"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="12dp"/>

                <!-- ✅ BOTONES SIN LLAMAR - MÁS GRANDES Y MEJOR DISTRIBUIDOS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIniciarNavegacion"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="🗺️ Google Maps"
                        android:textSize="13sp"
                        app:backgroundTint="#2196F3"
                        style="@style/Widget.Material3.Button"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMostrarRuta"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:text="🛣️ Ver Ruta"
                        android:textSize="13sp"
                        app:backgroundTint="#9C27B0"
                        style="@style/Widget.Material3.Button"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCompletarServicio"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="📱 Finalizar"
                        android:textSize="13sp"
                        app:backgroundTint="#FF6B35"
                        style="@style/Widget.Material3.Button"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Controles de zoom -->
    <LinearLayout
        android:id="@+id/zoom_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardServicioActivo">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="Acercar"
            android:src="@drawable/ic_zoom_in2"
            app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="Alejar"
            android:src="@drawable/ic_zoom_out"
            app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTestNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Probar notificación"
            android:src="@drawable/ic_notification"
            app:fabSize="mini"/>
    </LinearLayout>

    <!-- Botón para centrar en la ubicación actual -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Mi ubicación"
        android:src="@drawable/ic_gps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>