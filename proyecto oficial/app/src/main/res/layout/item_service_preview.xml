<?xml version="1.0" encoding="utf-8"?>
<!-- Improved layout for individual service items -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Service icon or image container with consistent size -->
    <FrameLayout
        android:id="@+id/fl_service_icon_container"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_circle_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Option 1: Icon for standard services -->
        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi"
            android:contentDescription="Servicio"
            android:visibility="visible"/>

        <!-- Option 2: Image for photo-based services -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_service_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/pool_placeholder"
            android:contentDescription="Servicio con foto"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- Service name with fixed width for consistency -->
    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="WiFi"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/fl_service_icon_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Badge for paid services (optional) -->
    <TextView
        android:id="@+id/tv_price_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_price_badge"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/fl_service_icon_container"
        app:layout_constraintEnd_toEndOf="@id/fl_service_icon_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>