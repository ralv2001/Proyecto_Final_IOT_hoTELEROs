<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_trip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ENCABEZADO: Fecha y Estado -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_completed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Ene"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_completed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textColor="#757575"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_status_completed"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- INFORMACIÓN PRINCIPAL -->
        <LinearLayout
            android:id="@+id/main_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/header_container">

            <!-- Imagen del hotel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/iv_hotel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/belmond"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Información del viaje -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel Grand Plaza"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliente: Carlos Mendoza"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_trip_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel-Aeropuerto"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:background="@drawable/bg_trip_type_pill"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp"/>

                <!-- Información de stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_clock_driver"
                            app:tint="#757575"/>

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 min"
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_location"
                            app:tint="#757575"/>

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.5 km"
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFD700"/>

                        <TextView
                            android:id="@+id/tv_client_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- INFORMACIÓN DE PAGOS -->
        <LinearLayout
            android:id="@+id/payment_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_payment_info"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/main_info_container">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total cobrado"
                    android:textColor="#666666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 85.00"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganancia: S/ 68.00"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Efectivo"
                    android:textColor="#666666"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- INFORMACIÓN DE RUTA -->
        <LinearLayout
            android:id="@+id/route_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/payment_info_container">

            <!-- Línea de ruta con iconos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_hotel"
                    app:tint="#4CAF50"
                    android:layout_marginBottom="1dp"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_aiport"
                    app:tint="#FF5722"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>

            <!-- Direcciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_origin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel Grand Plaza, Av. Principal 123, San Miguel"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_destination_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aeropuerto Internacional Jorge Chávez, Callao"
                    android:textSize="13sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </LinearLayout>

        <!-- BOTONES DE ACCIÓN -->
        <!-- BOTONES DE ACCIÓN -->
        <LinearLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/route_info_container">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver detalles"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_repeat_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Repetir viaje"
                android:textColor="#FF5722"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="#FF5722"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>