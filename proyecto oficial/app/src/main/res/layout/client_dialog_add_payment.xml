<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Agregar Tarjeta"
            android:textColor="#1A1A1A"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Aceptamos Visa y Mastercard únicamente"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_title" />

        <!-- Card Preview Container -->
        <FrameLayout
            android:id="@+id/card_preview_container"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_subtitle">

            <!-- Card Front View -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_front_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#1565C0"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_header_gradient"
                    android:padding="20dp">

                    <!-- Bank/Card Logo Area -->
                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="BANK"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Chip -->
                    <ImageView
                        android:id="@+id/iv_card_chip"
                        android:layout_width="48dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_card_chip"
                        app:tint="#FFD700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_bank_name"
                        tools:ignore="ContentDescription" />

                    <!-- Card Number -->
                    <TextView
                        android:id="@+id/tv_card_number_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:fontFamily="@font/inter_medium"
                        android:letterSpacing="0.15"
                        android:text="•••• •••• •••• ••••"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/iv_card_chip" />

                    <!-- Bottom info section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="TITULAR"
                                android:textColor="#E8EAF6"
                                android:textSize="9sp"
                                android:alpha="0.8"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/tv_card_holder_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="NOMBRE DEL TITULAR"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="VENCE"
                                android:textColor="#E8EAF6"
                                android:textSize="9sp"
                                android:alpha="0.8"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/tv_expiry_date_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="MM/YY"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Card Type Logo -->
                        <ImageView
                            android:id="@+id/iv_card_type"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_card_visa"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Back View -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_back_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardBackgroundColor="#1565C0"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_header_gradient">

                    <!-- Magnetic Strip -->
                    <View
                        android:id="@+id/view_magnetic_strip"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="32dp"
                        android:background="#2C2C2C"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Signature and CVV section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/view_magnetic_strip">

                        <!-- Signature Panel -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="#F8F9FA"
                            android:elevation="1dp" />

                        <!-- CVV Box -->
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:elevation="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cvv_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="CVV"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="italic" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Security features text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Autorizado para uso mundial • Servicio al cliente 24/7"
                        android:textColor="#E8EAF6"
                        android:textSize="10sp"
                        android:alpha="0.7"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/view_magnetic_strip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="SmallSp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Flip Card Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_flip_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Girar tarjeta"
            android:src="@drawable/ic_flip"
            app:fabSize="mini"
            app:backgroundTint="#FF5722"
            app:tint="#FFFFFF"
            app:elevation="6dp"
            app:layout_constraintEnd_toEndOf="@id/card_preview_container"
            app:layout_constraintTop_toTopOf="@id/card_preview_container" />

        <!-- Form Fields -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_card_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Número de Tarjeta"
            app:hintTextColor="#666666"
            app:boxStrokeColor="#FF5722"
            app:boxStrokeWidth="2dp"
            app:counterEnabled="true"
            app:counterMaxLength="19"
            app:startIconDrawable="@drawable/ic_card_visa"
            app:startIconTint="#666666"
            app:layout_constraintTop_toBottomOf="@id/card_preview_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:inputType="number"
                android:maxLength="19"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Expiry and CVV Row -->
        <LinearLayout
            android:id="@+id/layout_exp_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/til_card_number">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_expiry_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:hint="MM/YY"
                app:hintTextColor="#666666"
                app:boxStrokeColor="#FF5722"
                app:boxStrokeWidth="2dp"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#666666">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cvv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:hint="CVV"
                app:hintTextColor="#666666"
                app:boxStrokeColor="#FF5722"
                app:boxStrokeWidth="2dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#666666">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Card Holder Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_card_holder"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Nombre del Titular"
            app:hintTextColor="#666666"
            app:boxStrokeColor="#FF5722"
            app:boxStrokeWidth="2dp"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#666666"
            app:layout_constraintTop_toBottomOf="@id/layout_exp_cvv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_card_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="30"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security Notice -->
        <LinearLayout
            android:id="@+id/security_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_success_toast"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/til_card_holder">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_lock"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Tu información está segura. No se realizarán cargos hasta el checkout del hotel."
                android:textColor="#666666"
                android:textSize="12sp"
                android:lineSpacingMultiplier="1.3" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/security_notice">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="#666666"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Guardar Tarjeta"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="#FF5722"
                app:cornerRadius="28dp"
                android:enabled="true"
                android:alpha="1.0" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>