<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba de Notificaciones"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Este es un espacio para probar las diferentes notificaciones de la aplicación. Selecciona qué tipo de notificación quieres enviar."
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTestBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Probar Notificación de Reserva"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/textDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btnTestCheckIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Probar Notificación de Check-in"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@+id/btnTestBooking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btnTestCheckOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Probar Notificación de Check-out"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@+id/btnTestCheckIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/textNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: Las notificaciones serán guardadas en la base de datos y aparecerán en la pantalla de notificaciones."
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnTestCheckOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>