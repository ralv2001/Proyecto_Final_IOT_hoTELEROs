<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".auth.password.VerifyCodeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:gravity="center">

<!--            &lt;!&ndash; Botón de retroceso &ndash;&gt;-->
<!--            <ImageButton-->
<!--                android:id="@+id/btnBack"-->
<!--                android:layout_width="42dp"-->
<!--                android:layout_height="42dp"-->
<!--                android:src="@drawable/custom_back_button"-->
<!--                android:background="@null"-->
<!--                android:layout_marginBottom="20dp"-->
<!--                android:contentDescription="Volver" />-->

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revise su correo electrónico"
                android:textSize="20sp"
                android:textColor="#1E1E1E"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="-0.025"
                android:lineSpacingExtra="0dp"
                android:layout_marginBottom="16dp"/>

            <!-- Descripción con email -->
            <TextView
                android:id="@+id/tvEmailSent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hemos enviado un enlace a *****@stuardiño.com"
                android:textSize="16sp"
                android:textColor="#989898"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="-0.025"
                android:lineSpacingExtra="4sp"
                android:layout_marginBottom="8dp"/>

            <!-- Instrucción -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haz clic en el enlace del email de verificación y luego presiona 'Verificar Email'"
                android:textSize="16sp"
                android:textColor="#989898"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="-0.025"
                android:lineSpacingExtra="4sp"
                android:layout_marginBottom="32dp"/>

            <!-- Icono de correo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_codigogozu"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:contentDescription="Icono de correo" />

            <!-- Cajas para ingresar códigos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="0dp">

                <!-- EditText 1 -->
                <EditText
                    android:id="@+id/etCode1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>

                <!-- EditText 2 -->
                <EditText
                    android:id="@+id/etCode2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>

                <!-- EditText 3 -->
                <EditText
                    android:id="@+id/etCode3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>

                <!-- EditText 4 -->
                <EditText
                    android:id="@+id/etCode4"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>

                <!-- EditText 5 -->
                <EditText
                    android:id="@+id/etCode5"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>

            <!-- Botón de verificar con spinner -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerifyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"
                android:text="Verificando..."
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:enabled="false"
                android:alpha="0.6"
                app:icon="@drawable/ic_spinnercargandogozu"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@android:color/white" />

<!--            &lt;!&ndash; Botón temporal para debugging - ELIMINAR DESPUÉS &ndash;&gt;-->
<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btnDebugCheck"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:backgroundTint="#FF9800"-->
