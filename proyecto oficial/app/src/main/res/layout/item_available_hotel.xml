<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_hotel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ENCABEZADO: Nombre hotel y calificación -->
        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hotel Grand Plaza"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_rating" />

        <!-- Calificación con estrella -->
        <LinearLayout
            android:id="@+id/layout_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_rating_badge"
            app:layout_constraintTop_toTopOf="@id/tv_hotel_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_hotel_name"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                app:tint="#FFD700" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.8"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Distancia y distrito -->
        <LinearLayout
            android:id="@+id/distance_district_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_hotel_name">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.8 km"
                android:textColor="#FF6B35"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="#FF6B35"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="San Miguel"
                android:textColor="#757575"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- SECCIÓN DE IMAGEN Y INFO JUNTOS -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/distance_district_container">

            <!-- Imagen del hotel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="16:10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.58">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_hotel_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/belmond" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hotel_image_gradient" />

                    <!-- Info de asociación -->
                    <TextView
                        android:id="@+id/tv_partnership_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asociado desde 2020"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_status_pill"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:layout_margin="8dp" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Información del hotel -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toEndOf="@id/image_card_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_card_view"
                app:layout_constraintBottom_toBottomOf="@id/image_card_view">

                <!-- Descripción -->
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel de 4 estrellas con servicios premium"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <!-- Estadística de servicios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_info_container"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_taxi"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/tv_total_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="127 servicios"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Botones de acción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Llamar"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#4CAF50"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_phone"
                        app:iconSize="14dp"
                        app:iconTint="@android:color/white"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.Icon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_directions"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Ir"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_directions"
                        app:iconSize="14dp"
                        app:iconTint="@android:color/white"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.Icon" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Dirección completa -->
        <TextView
            android:id="@+id/tv_hotel_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Av. La Marina 123, San Miguel"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="#CCCCCC"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/image_info_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>