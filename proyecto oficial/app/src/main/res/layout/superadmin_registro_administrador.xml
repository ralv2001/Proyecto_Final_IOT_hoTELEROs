<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@android:color/white"/>

            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Registro de Administrador"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>




    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingBottom="20dp">



            <!-- Nombres -->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/perfil"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />



            <TextView
                android:id="@+id/tvNombresLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nombres" />

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese sus nombres"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPersonName"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Apellidos -->
            <TextView
                android:id="@+id/tvApellidosLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Apellidos" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese sus apellidos"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPersonName"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Correo electrónico -->
            <TextView
                android:id="@+id/tvEmailLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo electrónico" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese su correo electrónico"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textEmailAddress"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Fecha de nacimiento -->
            <TextView
                android:id="@+id/tvFechaNacimientoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fecha de nacimiento" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="DD/MM/AAAA"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="date"
                    android:focusable="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendargozu"
                    android:background="@null"
                    android:contentDescription="Seleccionar fecha" />
            </LinearLayout>

            <!-- Número de teléfono -->
            <TextView
                android:id="@+id/tvTelefonoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Número de teléfono" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/se1e1e1sw2cr12"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/countryCodeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ivCountryFlag"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/circle_flag_pe"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Bandera del país" />

                    <ImageView
                        android:id="@+id/ivDropdown"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_desplegar"
                        android:contentDescription="Desplegar opciones" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerPhone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="#E1E1E1"
                    android:layout_toEndOf="@id/countryCodeContainer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/dividerPhone"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp">

                    <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+51) "
                        android:textColor="#545454"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <EditText
                        android:id="@+id/etTelefono"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="XXX-XXX-XXX"
                        android:textColorHint="#61989898"
                        android:textColor="#545454"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- DNI/Carnet de Extranjería -->
            <TextView
                android:id="@+id/tvDocumentoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DNI/Carnet de Extranjería" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/se1e1e1sw2cr12"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/docTypeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp">

                    <TextView
                        android:id="@+id/tvDocType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI"
                        android:textColor="#545454"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/ivDocDropdown"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_desplegar"
                        android:contentDescription="Desplegar opciones" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerDoc"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="#E1E1E1"
                    android:layout_toEndOf="@id/docTypeContainer" />

                <EditText
                    android:id="@+id/etNumeroDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/dividerDoc"
                    android:background="@null"
                    android:hint="Ingrese su número de documento"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:paddingHorizontal="21dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- Dirección de domicilio -->
            <TextView
                android:id="@+id/tvDireccionLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Dirección de domicilio" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese su dirección completa"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPostalAddress"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Contraseña -->
            <TextView
                android:id="@+id/tvContrasenaLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Contraseña" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:hint="Ingrese su nueva contraseña"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingVertical="18dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="48dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ibTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:src="@drawable/ic_visibility_custom"
                    android:contentDescription="Toggle password visibility" />
            </RelativeLayout>

            <!-- Barra de progreso para requisitos de contraseña -->
            <ImageView
                android:id="@+id/passwordStrengthBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/progress_bar_0"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp" />

            <!-- Requisitos de contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ivReq1Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entre 8 y 32 caracteres"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ivReq2Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="un número y un símbolo"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivReq3Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="una mayúscula"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>
            </LinearLayout>

            <!-- Confirmar Contraseña -->
            <TextView
                android:id="@+id/tvConfirmarContrasenaLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Confirmar contraseña" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etConfirmarContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:hint="Confirme su nueva contraseña"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingVertical="18dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="48dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ibToggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:src="@drawable/ic_visibility_custom"
                    android:contentDescription="Toggle password visibility" />
            </RelativeLayout>



            <!-- Botón de Lista de usuarios -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_desactivar"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Registrar"
                android:textSize="22sp"
                app:backgroundTint="#50993A"
                app:cornerRadius="12dp"
                app:elevation="4dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>