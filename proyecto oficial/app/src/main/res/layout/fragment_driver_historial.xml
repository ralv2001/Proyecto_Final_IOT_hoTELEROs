<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taxista.fragment.DriverHistorialFragment">

    <!-- Cabecera con estadísticas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de Viajes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_historial_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tienes 0 viajes en tu historial"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="12dp"/>

            <!-- Estadísticas rápidas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Total de viajes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_stat_card"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tv_total_trips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viajes completados"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Total de ganancias -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_stat_card"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tv_total_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganancias totales"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mensajes de estado (lista vacía, error, cargando) -->
    <FrameLayout
        android:id="@+id/stateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Estado vacío -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_historial"
                android:alpha="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay viajes en el historial"
                android:textSize="18sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los viajes completados aparecerán aquí"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Estado de carga -->
        <LinearLayout
            android:id="@+id/loading_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="#FF5722"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando historial..."
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Lista de historial -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_historial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:visibility="visible"/>
    </FrameLayout>

    <!-- Botón para actualizar manualmente -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_refresh"
        app:backgroundTint="#FF5722"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>