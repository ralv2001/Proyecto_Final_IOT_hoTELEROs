<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_modern"
    android:minHeight="400dp"
    android:maxHeight="600dp">

    <!-- Header con gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_header_gradient_modern">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_white"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                app:tint="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Ubicación del Hotel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona la ubicación exacta"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/inter_regular"
                android:alpha="0.9" />

        </LinearLayout>

    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Campo de búsqueda con Google Places -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/orange"
            app:hintTextColor="@color/orange"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/orange"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <AutoCompleteTextView
                android:id="@+id/etLocationSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar dirección en Perú..."
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#1A1A1A"
                android:inputType="textCapWords"
                android:completionThreshold="3"
                android:maxLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Mi Ubicación -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="📍 Usar mi ubicación actual"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/orange"
            app:cornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_location"
            app:iconTint="@color/orange"
            app:iconGravity="start"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp" />

        <!-- Ubicación seleccionada -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación seleccionada:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="8dp" />

        <!-- Card de ubicación seleccionada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSelectedLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8F9FA"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/green"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSelectedLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Av. José Larco 123"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvSelectedLocationAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miraflores, Lima, Perú"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="@color/green" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Estado vacío -->
        <LinearLayout
            android:id="@+id/layoutEmptyLocation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:alpha="0.3"
                app:tint="#BDBDBD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busca o selecciona una ubicación"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="24dp"
        android:paddingTop="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelLocation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancelar"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmLocation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Confirmar Ubicación"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>