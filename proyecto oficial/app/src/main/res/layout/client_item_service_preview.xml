<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Service icon container con mejor visibilidad -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fl_service_icon_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="@color/orange_light"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi"
            android:contentDescription="Icono de servicio"
            app:tint="@color/orange_primary"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <!-- Service name con tipografÃ­a consistente -->
    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WiFi"
        android:textSize="13sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:gravity="center"
        android:textAlignment="center"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/fl_service_icon_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="85dp" />

    <!-- Premium badge for paid services -->
    <TextView
        android:id="@+id/tv_price_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="$"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_circle_orange"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/fl_service_icon_container"
        app:layout_constraintEnd_toEndOf="@id/fl_service_icon_container"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="-6dp" />

    <!-- Conditional service indicator -->
    <View
        android:id="@+id/conditional_indicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_circle_orange"
        android:visibility="gone"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/fl_service_icon_container"
        app:layout_constraintStart_toStartOf="@id/fl_service_icon_container"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="-3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>