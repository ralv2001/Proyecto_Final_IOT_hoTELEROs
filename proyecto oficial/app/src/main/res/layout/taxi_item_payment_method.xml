<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_payment_method"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ENCABEZADO: Icono y nombre -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_icon_background"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_payment_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_payment"
                app:tint="#2196F3"
                android:contentDescription="Icono de método de pago" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/payment_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/card_icon_background"
            app:layout_constraintBottom_toBottomOf="@id/card_icon_background"
            app:layout_constraintStart_toEndOf="@id/card_icon_background"
            app:layout_constraintEnd_toStartOf="@id/switch_enabled">

            <TextView
                android:id="@+id/tv_payment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Efectivo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_payment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pagos en efectivo directo"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Switch para habilitar/deshabilitar -->
        <Switch
            android:id="@+id/switch_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintTop_toTopOf="@id/card_icon_background"
            app:layout_constraintBottom_toBottomOf="@id/card_icon_background"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Indicador de método predeterminado -->
        <TextView
            android:id="@+id/tv_default_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREDETERMINADO"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_default_indicator"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/card_icon_background"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Información adicional -->
        <LinearLayout
            android:id="@+id/additional_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_default_indicator">

            <!-- Número de cuenta (si aplica) -->
            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**** 1234"
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_credit_card"
                android:drawableTint="#666666"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Banco (si aplica) -->
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco de Crédito del Perú"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_bank"
                android:drawableTint="#666666"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Estadísticas -->
        <LinearLayout
            android:id="@+id/stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_stats_container"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/additional_info_container">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total recibido"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_total_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 1,850.50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Último uso"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_last_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 2 horas"
                    android:textSize="13sp"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/stats_container">

            <!-- Botón establecer como predeterminado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_set_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Predet."
                android:textSize="11sp"
                android:textColor="#FF6B35"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="#FF6B35"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                android:layout_marginEnd="6dp"
                app:icon="@drawable/ic_star"
                app:iconSize="16dp"
                app:iconTint="#FF6B35"
                style="@style/Widget.Material3.Button.OutlinedButton" />


            <!-- Botón eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Eliminar"
                android:textSize="11sp"
                android:textColor="#F44336"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                android:layout_marginStart="6dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="#F44336"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>