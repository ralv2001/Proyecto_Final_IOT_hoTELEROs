<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.register.SelectUserTypeFragment"
    android:orientation="vertical"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/scrollViewLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr40bffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabelStyle"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Seleccionar usuario"
                />

            <TextView
                style="@style/FormLabelStyle"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#989898"
                android:text="Por favor, seleccione si desea registrase como cliente o como taxista"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#E1E1E1"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_user"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:textColor="#2A2A2A"
                style="@style/SocialButtonTextStyle"
                android:text="Registrarse como cliente"
                android:paddingVertical="15dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="26dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarTaxista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#E1E1E1"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_taxi"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:textColor="#2A2A2A"
                style="@style/SocialButtonTextStyle"
                android:text="Registrarse como taxista"
                android:paddingVertical="16dp"
                android:layout_marginBottom="35dp"
                android:layout_marginHorizontal="26dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>