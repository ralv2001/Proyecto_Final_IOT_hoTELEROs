<?xml version="1.0" encoding="utf-8"?>
<!-- Improved layout for hotel services preview -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">

    <!-- Header section with title and "See all" button -->
    <TextView
        android:id="@+id/tv_services_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios de alojamiento"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_see_all_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todo"
        android:textSize="14sp"
        android:textColor="#FF5722"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_services_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_services_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for services with consistent spacing -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_services_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        app:layout_constraintTop_toBottomOf="@id/tv_services_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_service_preview"
        tools:itemCount="4" />

</androidx.constraintlayout.widget.ConstraintLayout>