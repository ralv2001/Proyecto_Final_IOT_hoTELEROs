<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:fitsSystemWindows="true">

    <!-- Header mejorado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@android:color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintEnd_toStartOf="@id/iv_filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_search_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles cerca de ti"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tv_search_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubre lugares increíbles"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_expand_more"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#FF5722" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Parámetros de búsqueda mejorados -->
    <LinearLayout
        android:id="@+id/layout_search_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:visibility="gone"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <!-- Card container premium -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ubicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_orange"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESTINO"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/poppins_medium"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Todas las ubicaciones"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#F0F0F0" />

                <!-- Fechas -->
                <LinearLayout
                    android:id="@+id/layout_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_orange"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">

                        <!-- Check-in -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHECK-IN"
                                android:textSize="11sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tv_check_in_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="29 May"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tv_check_in_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jueves"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginTop="1dp" />
                        </LinearLayout>

                        <!-- Separador -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginHorizontal="12dp">

                            <View
                                android:layout_width="24dp"
                                android:layout_height="2dp"
                                android:background="#E0E0E0" />
                        </LinearLayout>

                        <!-- Check-out -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHECK-OUT"
                                android:textSize="11sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tv_check_out_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31 May"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tv_check_out_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sábado"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginTop="1dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#F0F0F0" />

                <!-- Huéspedes -->
                <LinearLayout
                    android:id="@+id/layout_guests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_orange"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_group"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HUÉSPEDES"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/poppins_medium"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tv_guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 adultos · 0 niños"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Duración de estadía -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_duration_pill"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:elevation="2dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                app:tint="#FF5722"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_stay_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 noches"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_semibold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Filtros -->
    <HorizontalScrollView
        android:id="@+id/scroll_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/layout_search_params">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:chipSpacingHorizontal="12dp" />

    </HorizontalScrollView>

    <!-- Contador de resultados -->
    <LinearLayout
        android:id="@+id/layout_results_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_filters">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_results_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hoteles encontrados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los mejores precios para ti"
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_sort_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_expand_more"
                app:tint="#FF5722"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Lista de hoteles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FBFBFB"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layout_results_header"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>