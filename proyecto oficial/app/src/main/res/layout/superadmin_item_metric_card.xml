<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- 🎨 CONTENEDOR CON GRADIENTE -->
    <FrameLayout
        android:id="@+id/gradient_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Header con ícono y valor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- 🎨 Ícono más grande con fondo circular -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">

                    <View
                        android:id="@+id/icon_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_white_semi_transparent" />

                    <ImageView
                        android:id="@+id/iv_metric_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_hotel"
                        app:tint="@android:color/white" />

                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 🎨 Valor más prominente -->
                <TextView
                    android:id="@+id/tv_metric_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

            <!-- 🎨 Título con mejor tipografía -->
            <TextView
                android:id="@+id/tv_metric_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 🎨 Indicador de cambio (opcional) -->
            <TextView
                android:id="@+id/tv_metric_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↗ +5.2%"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 🎨 Overlay para efecto de profundidad -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/metric_card_overlay" />

    </FrameLayout>

</androidx.cardview.widget.CardView>