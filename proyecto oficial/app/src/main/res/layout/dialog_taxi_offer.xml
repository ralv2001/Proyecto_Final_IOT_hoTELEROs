<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_taxi_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_taxi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/orange_primary" />

    <TextView
        android:id="@+id/tv_taxi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servicio de Taxi al Aeropuerto"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_taxi_icon"/>

    <TextView
        android:id="@+id/tv_taxi_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añade S/. 50.00 más a tu reserva para obtener el servicio de taxi gratuito, o añádelo por S/. 60.00"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_taxi_title"/>

    <Button
        android:id="@+id/btn_add_taxi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir Taxi"
        android:textAllCaps="false"
        android:backgroundTint="@color/orange_primary"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_taxi_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:backgroundTint="@color/text_secondary"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_add_taxi"
        app:layout_constraintStart_toEndOf="@id/btn_add_taxi"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>