<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="20dp">

    <!-- Título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modificar búsqueda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageButton
            android:id="@+id/btn_close_modify"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#999999"/>
    </LinearLayout>

    <!-- Ubicación (Condicional) -->
    <LinearLayout
        android:id="@+id/layout_location_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                app:tint="#FF5722"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESTINO"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_location_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área metropolitana"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fijo"
                android:textSize="12sp"
                android:textColor="#999999"
                android:background="@drawable/bg_rounded_pill"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone"/>

            <!-- ✅ AGREGADO: Chevron para ubicación -->
            <ImageView
                android:id="@+id/iv_chevron_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fechas -->
    <LinearLayout
        android:id="@+id/layout_dates_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                app:tint="#FF5722"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHAS"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_dates_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy - Mañana"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- ✅ AGREGADO: ID para chevron de fechas -->
            <ImageView
                android:id="@+id/iv_chevron_dates"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Huéspedes -->
    <LinearLayout
        android:id="@+id/layout_guests_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_group"
                app:tint="#FF5722"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUÉSPEDES"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_guests_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 adultos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- ✅ AGREGADO: ID para chevron de huéspedes -->
            <ImageView
                android:id="@+id/iv_chevron_guests"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_modify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="#FF5722"
            android:background="@drawable/bg_button_outline2"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_apply_modify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Aplicar cambios"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>