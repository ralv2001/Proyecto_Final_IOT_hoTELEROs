<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fondo de pantalla -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondito_pagina_inicial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="26dp"
            android:paddingBottom="16dp">

            <!-- Logo como TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="hoTELITOs"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold" />


            <!-- Título principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Super Administrador"
                android:textColor="#0C0D0E"
                android:textSize="30sp" />


            <!-- Botón de Lista de usuarios -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lista_usuarios"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Lista de Usuarios"
                android:textSize="22sp"
                app:backgroundTint="#F35D38"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Botón de solicitud de taxi -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_solicitudes_taxistas"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Solicitudes de Taxistas"
                android:textSize="22sp"
                app:backgroundTint="#F35D38"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Botón de registro de administrador -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_registro_administrador"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Registro de Administrador"
                android:textSize="22sp"
                app:backgroundTint="#F35D38"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Botón de reporte de reservas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reporte_reservas"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Reporte de Reservas"
                android:textSize="22sp"
                app:backgroundTint="#F35D38"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Botón de Log de eventos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log_eventos"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="16dp"
                android:text="Log de Eventos"
                android:textSize="22sp"
                app:backgroundTint="#F35D38"
                app:cornerRadius="12dp"
                app:elevation="4dp" />



            <!-- Botón de cerrar de sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/ButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingVertical="16dp"
                android:text="Cerrar Sesión"
                android:textColor="#1A1A1A"
                android:textSize="22sp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                app:strokeColor="#E1E1E1"
                app:strokeWidth="1dp" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>