<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    tools:context=".superadmin.fragment.AddHotelAdminFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B35"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        app:title="Registrar Admin de Hotel" />

    <!-- ScrollView simple -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView para los campos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_admin_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

    <!-- BotÃ³n fijo abajo -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_admin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Crear Administrador"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#FF6B35"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white" />

</LinearLayout>