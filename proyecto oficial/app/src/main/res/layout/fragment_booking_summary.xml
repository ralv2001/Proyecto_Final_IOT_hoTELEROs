<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior con título y botón de retroceso -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resumen de la Reserva"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="48dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Línea divisoria -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/top_bar"/>

    <!-- Contenido del resumen de reserva (ScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm_container"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Información del hotel -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_hotel_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/img_hotel"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/belmond"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_hotel_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Belmond Miraflores Park"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="@id/img_hotel"
                        app:layout_constraintStart_toEndOf="@id/img_hotel"
                        app:layout_constraintEnd_toStartOf="@id/tv_rating" />

                    <TextView
                        android:id="@+id/tv_hotel_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Miraflores, Lima, Perú"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
                        app:layout_constraintStart_toEndOf="@id/img_hotel"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/290/noche"
                        android:textSize="14sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/img_hotel"
                        app:layout_constraintStart_toEndOf="@id/img_hotel" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:background="#F5F5F5"
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="@id/img_hotel"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Información de la estancia -->
            <TextView
                android:id="@+id/tv_stay_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información de estancia"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/card_hotel_info" />

            <TextView
                android:id="@+id/label_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkin - Checkout"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_calenda"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_stay_info_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_check_in_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8 abril - 9 abril"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_check"
                app:layout_constraintBottom_toBottomOf="@id/label_check"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de personas"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_check"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_number_of_guests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 Adultos - 0 niños"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_guests"
                app:layout_constraintBottom_toBottomOf="@id/label_guests"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de cuarto"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_room"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_guests"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_room_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Estándar"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_room_type"
                app:layout_constraintBottom_toBottomOf="@id/label_room_type"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_number"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_room_type"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_room_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9634448852"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_room_number"
                app:layout_constraintBottom_toBottomOf="@id/label_room_number"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio de taxi gratuito"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_taxi"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_room_number"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_free_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_transport"
                app:layout_constraintBottom_toBottomOf="@id/label_transport"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Detalles de precios -->
            <TextView
                android:id="@+id/tv_price_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles de los precios"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/label_transport" />

            <TextView
                android:id="@+id/label_reservation_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Reserva"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_price_details_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_reservation_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S/ 290.00"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_reservation_price"
                app:layout_constraintBottom_toBottomOf="@id/label_reservation_price"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_additional_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios Adicionales"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_reservation_price"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_additional_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S/ 60.00"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_additional_services"
                app:layout_constraintBottom_toBottomOf="@id/label_additional_services"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Total"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_additional_services"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S/ 350.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/label_total_price"
                app:layout_constraintBottom_toBottomOf="@id/label_total_price"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón de confirmar y pagar (fijo abajo) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_confirm_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_and_pay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirmar y Pagar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_orange_button"
            app:backgroundTint="#FF5722"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>