<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".client.ui.fragment.HomeFragment">

    <!-- ScrollView para contenido scrolleable -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ConstraintLayout para organizar el contenido dentro del ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp">

            <!-- Avatar (imagen circular) -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/perfil"
                app:civ_border_width="1dp"
                app:civ_border_color="#E0E0E0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Contenedor circular para el ícono de notificación -->
            <FrameLayout
                android:id="@+id/fl_notification_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_white"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Ícono de notificaciones -->
                <ImageView
                    android:id="@+id/iv_notifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/notification_desc"
                    android:src="@drawable/ic_notification" />
            </FrameLayout>

            <!-- Texto de saludo dinámico para el usuario logueado -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hola, Huésped"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintEnd_toStartOf="@+id/fl_notification_container"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Título principal: "Explora nuestro maravilloso Perú!" -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/explora_text"
                android:textColor="@android:color/black"
                android:textSize="38sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Incluimos el panel de búsqueda justo debajo del título -->
            <include
                android:id="@+id/include_search_panel"
                layout="@layout/client_view_search_panel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.82"/>

            <!-- ========== SECCIÓN 1: HOTELES CERCA DE TI ========== -->

            <!-- Título "Hoteles cerca de ti" y "Ver todo" -->
            <TextView
                android:id="@+id/tv_hotels_nearby_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles cerca a ti"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/include_search_panel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/tv_hotels_nearby_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_hotels_nearby_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ✅ CONTENEDOR PARA SECCIÓN HOTELES CERCANOS -->
            <FrameLayout
                android:id="@+id/container_nearby_hotels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hotels_nearby_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- RecyclerView horizontal con ítems de hotel -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    tools:listitem="@layout/client_item_hotel_card"/>

                <!-- Loading state para hoteles cercanos -->
                <LinearLayout
                    android:id="@+id/loading_nearby"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando hoteles cercanos..."
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <!-- Empty state para hoteles cercanos -->
                <TextView
                    android:id="@+id/tv_empty_nearby"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="No hay hoteles cercanos disponibles"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- ========== SECCIÓN 2: HOTELES POPULARES ========== -->

            <!-- Título "Hoteles populares" -->
            <TextView
                android:id="@+id/tv_hotels_popular_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles populares"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/container_nearby_hotels"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_see_all_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/tv_hotels_popular_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_hotels_popular_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ✅ CONTENEDOR PARA SECCIÓN HOTELES POPULARES -->
            <FrameLayout
                android:id="@+id/container_popular_hotels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hotels_popular_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- RecyclerView for popular hotels -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopularHotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    tools:listitem="@layout/client_item_hotel_card"/>

                <!-- Loading state para hoteles populares -->
                <LinearLayout
                    android:id="@+id/loading_popular"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando hoteles populares..."
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <!-- Empty state para hoteles populares -->
                <TextView
                    android:id="@+id/tv_empty_popular"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="No hay hoteles populares disponibles"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- ========== SECCIÓN 3: ESCOGE LA CIUDAD QUE QUIERAS (ORIGINAL) ========== -->

            <!-- Título "Escoge la ciudad que quieras" y "Ver todo" -->
            <TextView
                android:id="@+id/tv_cities_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escoge la ciudad \nque quieras"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/container_popular_hotels"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_see_all_cities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/tv_cities_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_cities_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ✅ RESTAURADO: CONTENEDOR ORIGINAL PARA CIUDADES -->
            <FrameLayout
                android:id="@+id/container_cities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cities_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- ✅ RESTAURADO: RecyclerView original para ciudades (horizontal) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    tools:listitem="@layout/client_item_city_card" />

                <!-- Loading state para ciudades -->
                <LinearLayout
                    android:id="@+id/loading_cities"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando ciudades..."
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <!-- Empty state para ciudades -->
                <TextView
                    android:id="@+id/tv_empty_cities"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:text="No hay ciudades disponibles"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:visibility="gone" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Barra de navegación inferior fija -->
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/client_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>