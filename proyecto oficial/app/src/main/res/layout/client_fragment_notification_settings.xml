<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="16dp"
    android:paddingBottom="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header with back button and title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvNotificationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificaciones"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:layout_marginStart="16dp"/>

        <!-- Divider -->
        <View
            android:id="@+id/dividerTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationsTitle"
            android:layout_marginTop="16dp"/>

        <!-- Main content -->
        <TextView
            android:id="@+id/tvOptionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencias de notificaciones"
            android:textSize="18sp"
            android:textColor="#9E9E9E"
            app:layout_constraintTop_toBottomOf="@id/dividerTop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Booking confirmation notification option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBookingNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/tvOptionsTitle"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivBooking"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#FA5D31"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvBookingTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Confirmación de reserva"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivBooking"
                    app:layout_constraintTop_toTopOf="@id/ivBooking"
                    app:layout_constraintEnd_toStartOf="@id/switchBooking"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tvBookingDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones cuando se confirme una reserva"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    app:layout_constraintStart_toStartOf="@id/tvBookingTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvBookingTitle"
                    app:layout_constraintEnd_toStartOf="@id/switchBooking"
                    android:layout_marginTop="4dp"/>

                <Switch
                    android:id="@+id/switchBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Check-in reminder notification option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCheckInNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/cardBookingNotification">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivCheckIn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#FA5D31"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvCheckInTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Recordatorio de check-in"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivCheckIn"
                    app:layout_constraintTop_toTopOf="@id/ivCheckIn"
                    app:layout_constraintEnd_toStartOf="@id/switchCheckIn"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tvCheckInDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Recibir recordatorios el día de tu check-in"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    app:layout_constraintStart_toStartOf="@id/tvCheckInTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvCheckInTitle"
                    app:layout_constraintEnd_toStartOf="@id/switchCheckIn"
                    android:layout_marginTop="4dp"/>

                <Switch
                    android:id="@+id/switchCheckIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Check-out reminder notification option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCheckOutNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/cardCheckInNotification">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivCheckOut"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#FA5D31"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvCheckOutTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Aviso de check-out"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivCheckOut"
                    app:layout_constraintTop_toTopOf="@id/ivCheckOut"
                    app:layout_constraintEnd_toStartOf="@id/switchCheckOut"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tvCheckOutDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Recibir un aviso 15 minutos antes del check-out"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    app:layout_constraintStart_toStartOf="@id/tvCheckOutTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvCheckOutTitle"
                    app:layout_constraintEnd_toStartOf="@id/switchCheckOut"
                    android:layout_marginTop="4dp"/>

                <Switch
                    android:id="@+id/switchCheckOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save button -->
        <Button
            android:id="@+id/btnSaveNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar configuración"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_bg"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom navigation -->
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/client_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>