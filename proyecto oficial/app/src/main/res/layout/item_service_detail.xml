<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Contenedor del icono con diseÃ±o mejorado -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fl_service_detail_container"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/orange_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_service_detail_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wifi"
                android:contentDescription="Icono de servicio"
                app:tint="@color/orange_primary" />
        </androidx.cardview.widget.CardView>

        <!-- InformaciÃ³n principal del servicio -->
        <TextView
            android:id="@+id/tv_service_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WiFi Premium"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/fl_service_detail_container"
            app:layout_constraintStart_toEndOf="@id/fl_service_detail_container"
            app:layout_constraintEnd_toStartOf="@id/tv_service_detail_price" />

        <!-- Precio del servicio -->
        <TextView
            android:id="@+id/tv_service_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“ Incluido"
            android:textSize="14sp"
            android:textColor="@color/success_green"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_price_free"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toTopOf="@id/fl_service_detail_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DescripciÃ³n breve -->
        <TextView
            android:id="@+id/tv_service_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ConexiÃ³n de alta velocidad en todas las Ã¡reas del hotel"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_service_detail_name"
            app:layout_constraintStart_toEndOf="@id/fl_service_detail_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Badge condicional mejorado -->
        <TextView
            android:id="@+id/tv_service_conditional_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Â¡GRATIS con reservas desde S/. 350!"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_conditional_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_service_detail_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Separador -->
        <View
            android:id="@+id/divider_service"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_service_conditional_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenedor de acciÃ³n -->
        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider_service"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- InformaciÃ³n adicional o features -->
            <TextView
                android:id="@+id/tv_service_features"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disponible 24/7"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/poppins_regular"
                android:drawablePadding="6dp"
                android:gravity="center_vertical" />

            <!-- BotÃ³n de acciÃ³n mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="AÃ±adir"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                app:backgroundTint="@color/orange_primary"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_add_circle"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:paddingHorizontal="20dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>