<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="12dp"
                    app:tint="#212121" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🚖 Servicio de Taxi"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al Aeropuerto Jorge Chávez"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Información de la reserva -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📍 Información del Hotel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel Costa del Sol"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp"
                    tools:text="Hotel Costa del Sol" />

                <TextView
                    android:id="@+id/tv_hotel_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chiclayo, Lambayeque"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="16dp"
                    tools:text="Chiclayo, Lambayeque" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Información del Pasajero"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliente Hoteleros"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp"
                    tools:text="Cliente Hoteleros" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+51 999 888 777"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    tools:text="+51 999 888 777" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Estado actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/orange_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔍 Buscando taxista"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    tools:text="🔍 Buscando taxista" />

                <TextView
                    android:id="@+id/tv_status_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscando taxista disponible..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    tools:text="Buscando taxista disponible..." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Estado: Esperando -->
        <LinearLayout
            android:id="@+id/layout_waiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:indeterminateTint="@color/orange_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conectando con taxistas cercanos..."
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Por favor espera mientras encontramos el mejor taxista para ti."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Estado: Taxista encontrado -->
        <LinearLayout
            android:id="@+id/layout_driver_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_driver_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🚗 Tu Taxista"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_driver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carlos Mendoza"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp"
                        tools:text="Carlos Mendoza" />

                    <TextView
                        android:id="@+id/tv_driver_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+51 987 654 321"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp"
                        tools:text="+51 987 654 321" />

                    <TextView
                        android:id="@+id/tv_car_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toyota Corolla • Placa ABC-123 • Gris"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp"
                        tools:text="Toyota Corolla • Placa ABC-123 • Gris" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call_driver"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="📞 Llamar al taxista"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/success_green"
                        app:cornerRadius="12dp"
                        android:textAllCaps="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Estado: En progreso -->
        <LinearLayout
            android:id="@+id/layout_in_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🚗 El taxista va en camino"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tu taxista llegará al hotel en aproximadamente 5-10 minutos."
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💼 Prepara tu equipaje y dirígete al lobby del hotel."
                        android:textSize="14sp"
                        android:textColor="#FF6B35"
                        android:gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Botón cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_request"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="Cancelar solicitud"
            android:textSize="16sp"
            android:textColor="#757575"
            app:backgroundTint="#F5F5F5"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="12dp"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>