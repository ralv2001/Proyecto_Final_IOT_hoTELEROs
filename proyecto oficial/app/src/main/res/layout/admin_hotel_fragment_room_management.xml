<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_gradient"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            app:tint="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="🏨 Gestión de Habitaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRoomTypes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Estado Vacío -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_hotel"
            android:alpha="0.3"
            app:tint="@color/orange"
            android:layout_marginBottom="24dp" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Crea tu primera habitación!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Configura los tipos de habitaciones de tu hotel.\nDefine servicios incluidos y precios para cada tipo."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Botón CTA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateFirstRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏨 Crear Primera Habitación"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            app:backgroundTint="@color/orange"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />

        <!-- Texto de servicios básicos -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="💡 Todas las habitaciones incluyen automáticamente:\nWiFi, Aire Acondicionado, TV Cable y Recepción 24h"
            android:textSize="13sp"
            android:textColor="@color/green"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_chip_green_light"
            android:padding="16dp"
            app:layout_constraintWidth_percent="0.9" />

    </LinearLayout>

    <!-- Loading -->
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/orange"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando habitaciones..."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/inter_regular" />

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/orange"
        app:tint="@android:color/white"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>