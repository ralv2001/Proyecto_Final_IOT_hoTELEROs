<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header CORREGIDO para evitar texto cortado -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient_modern"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="28dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"
                app:tint="@color/orange"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Volver" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ Gestión del Perfil"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Configura la información de tu hotel"
                    android:textSize="14sp"
                    android:textColor="#E8EAED"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Sección 1: Información del Hotel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header de la sección SIN BOTÓN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_orange_light"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_hotel"
                                app:tint="@color/orange" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Información del Hotel"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Datos básicos y fotos principales"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Campo Nombre del Hotel -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxStrokeColor="@color/orange"
                        app:hintTextColor="@color/orange"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_hotel"
                        app:startIconTint="@color/orange"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHotelName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del Hotel"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#1A1A1A"
                            android:inputType="textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación del Hotel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Botón Selector de Ubicación -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLocationSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/orange"
                        app:strokeWidth="1dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/orange"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvSelectedLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Seleccionar ubicación"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="@font/inter_regular" />

                                <TextView
                                    android:id="@+id/tvLocationHint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Toca para elegir la ubicación del hotel"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_regular"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/orange" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Información de ubicación actual (se mostrará cuando ya hay una ubicación seleccionada) -->
                    <!-- DESPUÉS (CORRECTO): -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCurrentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E8F5E8"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                app:tint="@color/green"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/tvCurrentLocationInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Av. José Larco 123, Miraflores, Lima"
                                android:textSize="14sp"
                                android:textColor="@color/green"
                                android:fontFamily="@font/inter_medium" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sección de Fotos del Hotel -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fotos del Hotel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Status de fotos -->
                    <TextView
                        android:id="@+id/tvPhotosStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 fotos agregadas (mínimo 3 requeridas)"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginBottom="16dp" />

                    <!-- Container para fotos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para fotos - SE MUESTRA CUANDO HAY FOTOS -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvHotelPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:visibility="gone"
                            tools:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_photo" />

                        <!-- Estado vacío para fotos - SE OCULTA CUANDO HAY FOTOS -->
                        <LinearLayout
                            android:id="@+id/emptyPhotosState"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_camera"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Sin fotos del hotel"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Agrega fotos para mostrar tu hotel"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Fotos -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="📷 Agregar Fotos"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_camera"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección 2: Servicios Básicos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header de servicios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_green_light"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_service"
                                app:tint="@color/green" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Servicios Básicos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Servicios incluidos automáticamente"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Container para servicios básicos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp">

                        <!-- RecyclerView para servicios básicos - SE MUESTRA CUANDO HAY SERVICIOS -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBasicServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:minHeight="100dp"
                            android:visibility="gone"
                            tools:visibility="gone"
                            tools:listitem="@layout/admin_hotel_item_basic_service" />

                        <!-- Estado vacío para servicios - SE OCULTA CUANDO HAY SERVICIOS -->
                        <LinearLayout
                            android:id="@+id/emptyServicesState"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_service"
                                android:alpha="0.3"
                                app:tint="#BDBDBD" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Sin servicios básicos configurados"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Configúralos desde gestión de servicios"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón DEBAJO del container - MODIFICADO PARA IR A GESTIÓN -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageServices"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Ir a Gestión de Servicios"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/green"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ✅ NUEVA SECCIÓN 3: Estado de Publicación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header de estado de publicación -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_blue_light"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check_circle"
                                app:tint="@color/blue" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado de Publicación"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Requisitos para activar el hotel"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Lista de criterios de activación -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_gray"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <!-- Criterio 1: Información básica -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:id="@+id/ivCriteriaInfo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_close"
                                app:tint="#F44336"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Información básica completa"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="@font/inter_medium" />

                                <TextView
                                    android:id="@+id/tvCriteriaInfoStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nombre, ubicación y 3+ fotos requeridas"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_regular" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Criterio 2: Servicios básicos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:id="@+id/ivCriteriaServices"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_close"
                                app:tint="#F44336"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Servicios básicos configurados"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="@font/inter_medium" />

                                <TextView
                                    android:id="@+id/tvCriteriaServicesStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mínimo 4 servicios básicos requeridos"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_regular" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Criterio 3: Tipos de habitaciones -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivCriteriaRooms"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_close"
                                app:tint="#F44336"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tipos de habitaciones creados"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="@font/inter_medium" />

                                <TextView
                                    android:id="@+id/tvCriteriaRoomsStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mínimo 3 tipos de habitaciones requeridos"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/inter_regular" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Estado actual del hotel -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/bg_info_note"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/ivHotelStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"
                            app:tint="#FF9800"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvHotelStatusTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hotel en Configuración"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:id="@+id/tvHotelStatusDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completa todos los criterios para publicar tu hotel"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón para ir a gestión de habitaciones -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageRooms"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Ir a Gestión de Habitaciones"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_medium"
                        app:backgroundTint="@color/blue"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_hotel"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Guardar Cambios - MODIFICADO con validación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="💾 Guardar Cambios"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                app:backgroundTint="@color/orange"
                app:cornerRadius="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- ✅ NUEVO: Botón de Activar Hotel (inicialmente oculto) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActivateHotel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🚀 Activar Hotel para Publicación"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                app:backgroundTint="@color/green"
                app:cornerRadius="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>