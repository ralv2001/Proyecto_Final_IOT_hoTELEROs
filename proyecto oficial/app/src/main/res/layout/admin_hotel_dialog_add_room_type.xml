<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_modern"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Simplificado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_header_gradient"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏨"
                    android:textSize="24sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear Habitación"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configura un nuevo tipo de habitación"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

            </LinearLayout>

            <!-- Tipo de Habitación -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋 Tipo de Habitación"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/orange"
                        app:hintTextColor="@color/orange">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerRoomType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Selecciona tipo de habitación"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Información Básica -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/light_gray"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 Información Básica"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Área y Precio en fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Área -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxStrokeColor="@color/blue"
                            app:hintTextColor="@color/blue"
                            app:suffixText="m²">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRoomArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Área"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Precio -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:boxStrokeColor="@color/green"
                            app:hintTextColor="@color/green"
                            app:prefixText="S/ ">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRoomPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Precio/noche"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Cantidad Disponible -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/orange"
                        app:hintTextColor="@color/orange">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAvailableRooms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cantidad disponible"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <!-- ✅ NUEVO: Capacidad -->
                    <!-- ✅ NUEVO: Capacidad -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/orange"
                        app:hintTextColor="@color/orange"
                        app:startIconDrawable="@drawable/ic_people"
                        app:startIconTint="@color/orange"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRoomCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Capacidad (personas)"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Servicios Básicos Incluidos (Card Separada) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/light_blue_bg"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛎️ Servicios Básicos Incluidos"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estos servicios están incluidos automáticamente en todas las habitaciones"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Servicios Básicos en Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ WiFi Gratuito"
                                android:textSize="12sp"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:drawablePadding="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ Aire Acondicionado"
                                android:textSize="12sp"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"
                                android:drawablePadding="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ TV Cable"
                                android:textSize="12sp"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"
                                android:drawablePadding="8dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ Teléfono"
                                android:textSize="12sp"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:drawablePadding="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ Baño Privado"
                                android:textSize="12sp"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"
                                android:drawablePadding="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Servicios Adicionales (Card Separada) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header con contador -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡ Servicios Adicionales"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selecciona servicios opcionales para esta habitación"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- En el layout que use EditRoomTypeDialog, agregar esto en la sección de servicios: -->
                        <TextView
                            android:id="@+id/tvSelectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 seleccionados"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_count_badge"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <!-- RecyclerView de servicios -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvServices"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_services_container"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:contentDescription="Lista de servicios adicionales opcionales" />

                    <!-- Tip al final -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Tip: Puedes agregar o quitar servicios después de crear la habitación"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="italic"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:alpha="0.8"
                        android:padding="8dp"
                        android:background="@drawable/bg_tip_container" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Cancelar"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/poppins_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="💾 Crear Habitación"
                    app:backgroundTint="@color/orange"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    android:fontFamily="@font/poppins_semibold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>