<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.register.RegisterFragment"
    android:background="#FFFFFF">

    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollViewRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="82dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingBottom="20dp">

            <!-- Botón de retroceso (sin margen superior) -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/custom_back_button"
                android:background="@null"
                android:layout_marginBottom="20dp"
                android:contentDescription="Volver" />

            <!-- Nombres -->
            <TextView
                android:id="@+id/tvNombresLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nombres" />

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese sus nombres"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPersonName"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Apellidos -->
            <TextView
                android:id="@+id/tvApellidosLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Apellidos" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese sus apellidos"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPersonName"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Correo electrónico -->
            <TextView
                android:id="@+id/tvEmailLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo electrónico" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese su correo electrónico"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textEmailAddress"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <!-- Fecha de nacimiento -->
            <TextView
                android:id="@+id/tvFechaNacimientoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fecha de nacimiento" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="DD/MM/AAAA"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="date"
                    android:focusable="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:background="@null"
                    android:contentDescription="Seleccionar fecha" />
            </LinearLayout>

            <!-- Número de teléfono -->
            <TextView
                android:id="@+id/tvTelefonoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Número de teléfono" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/se1e1e1sw2cr12"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/countryCodeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ivCountryFlag"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/circle_flag_pe"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Bandera del país" />

                    <ImageView
                        android:id="@+id/ivDropdown"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_desplegar"
                        android:contentDescription="Desplegar opciones" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerPhone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="#E1E1E1"
                    android:layout_toEndOf="@id/countryCodeContainer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/dividerPhone"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp">

                    <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+51) "
                        android:textColor="#545454"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <EditText
                        android:id="@+id/etTelefono"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="XXX-XXX-XXX"
                        android:textColorHint="#61989898"
                        android:textColor="#545454"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- DNI/Carnet de Extranjería -->
            <TextView
                android:id="@+id/tvDocumentoLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DNI/Carnet de Extranjería" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/se1e1e1sw2cr12"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/docTypeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="21dp">

                    <TextView
                        android:id="@+id/tvDocType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI"
                        android:textColor="#545454"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/ivDocDropdown"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_desplegar"
                        android:contentDescription="Desplegar opciones" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerDoc"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="#E1E1E1"
                    android:layout_toEndOf="@id/docTypeContainer" />

                <EditText
                    android:id="@+id/etNumeroDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/dividerDoc"
                    android:background="@null"
                    android:hint="Ingrese su número de documento"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="number"
                    android:paddingHorizontal="21dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- Dirección de domicilio -->
            <TextView
                android:id="@+id/tvDireccionLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Dirección de domicilio" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se1e1e1sw2cr12"
                android:hint="Ingrese su dirección completa"
                android:textColorHint="#61989898"
                android:textColor="#545454"
                android:inputType="textPostalAddress"
                android:paddingVertical="18dp"
                android:paddingHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Área fija en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="12dp"
            android:text="Continuar"
            android:paddingVertical="18dp"
            style="@style/ButtonTextStyle"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="16dp"
            android:enabled="false"
            android:alpha="0.4" />
    </LinearLayout>

</FrameLayout>