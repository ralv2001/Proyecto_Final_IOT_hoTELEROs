<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- AppBar reutilizada -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Regresar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="#333333" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Detalles de Reserva"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="48dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="90dp">

            <!-- Tarjeta de Hotel (reutilizada de booking_summary) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hotel_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_hotel_banner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/belmond"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:layout_constraintTop_toBottomOf="@id/img_hotel_banner">

                        <TextView
                            android:id="@+id/tv_hotel_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Belmond Miraflores Park"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#212121"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_rating" />

                        <TextView
                            android:id="@+id/tv_hotel_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Miraflores, Lima, Perú"
                            android:textSize="15sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1D1D1D"
                            android:background="@drawable/bg_rating_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableStart="@drawable/ic_star"
                            android:drawablePadding="4dp"
                            app:layout_constraintTop_toTopOf="@id/tv_hotel_name"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Estado de Reserva -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reservation_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_hotel_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_reservation_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado de Reserva"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_reservation_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reserva: RES-GH-20250605"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_reservation_title"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_reservation_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próxima Reserva"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:background="@drawable/bg_status_green"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_reservation_id"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reutilizar tarjeta de información de estancia -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stay_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_reservation_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_stay_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información de Estancia"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Fechas -->
                    <ImageView
                        android:id="@+id/icon_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calenda"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_stay_info_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fechas"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/icon_calendar"
                        app:layout_constraintStart_toEndOf="@id/icon_calendar"
                        app:layout_constraintEnd_toStartOf="@id/tv_check_in_out" />

                    <TextView
                        android:id="@+id/tv_check_in_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 abril - 9 abril"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/icon_calendar"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Huéspedes -->
                    <ImageView
                        android:id="@+id/icon_guests"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_guests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Huéspedes"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_guests"
                        app:layout_constraintBottom_toBottomOf="@id/icon_guests"
                        app:layout_constraintStart_toEndOf="@id/icon_guests"
                        app:layout_constraintEnd_toStartOf="@id/tv_number_of_guests" />

                    <TextView
                        android:id="@+id/tv_number_of_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 adultos - 0 niños"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_guests"
                        app:layout_constraintBottom_toBottomOf="@id/icon_guests"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Tipo de habitación -->
                    <ImageView
                        android:id="@+id/icon_room"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_room"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_guests"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_room_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo de habitación"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_room"
                        app:layout_constraintBottom_toBottomOf="@id/icon_room"
                        app:layout_constraintStart_toEndOf="@id/icon_room"
                        app:layout_constraintEnd_toStartOf="@id/tv_room_type" />

                    <TextView
                        android:id="@+id/tv_room_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estándar"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_room"
                        app:layout_constraintBottom_toBottomOf="@id/icon_room"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Número de habitación -->
                    <ImageView
                        android:id="@+id/icon_number"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_number"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_room"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_room_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Número de habitación"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_number"
                        app:layout_constraintBottom_toBottomOf="@id/icon_number"
                        app:layout_constraintStart_toEndOf="@id/icon_number"
                        app:layout_constraintEnd_toStartOf="@id/tv_room_number" />

                    <TextView
                        android:id="@+id/tv_room_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9634448852"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_number"
                        app:layout_constraintBottom_toBottomOf="@id/icon_number"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de servicios/factura (condicional) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_services_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_stay_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_services_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios Adicionales"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_services_breakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Desayuno buffet (x2): S/90.00\n• Spa: S/120.00"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_services_title" />

                    <View
                        android:id="@+id/divider_services"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_services_breakdown"/>

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: S/1,410.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/divider_services"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón de acción (fijo abajo) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_primary_action"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Ver Detalles"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FF5722"
                app:cornerRadius="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>