<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/icon_calendar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_calenda"
        android:background="@drawable/bg_circle_orange"
        android:padding="12dp"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Fechas de Reserva"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/icon_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona tus nuevas fechas de estadÃ­a. Ten en cuenta que podrÃ­a haber cambios en el precio segÃºn disponibilidad."
        android:textSize="15sp"
        android:textColor="#757575"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_current_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fechas actuales: 10 May - 15 May, 2025"
        android:textSize="14sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:background="@drawable/bg_info_container"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_dates"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Seleccionar nuevas fechas"
        android:layout_marginTop="20dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_dates" />

</androidx.constraintlayout.widget.ConstraintLayout>