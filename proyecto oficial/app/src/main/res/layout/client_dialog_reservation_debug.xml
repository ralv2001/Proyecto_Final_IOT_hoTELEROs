<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Background clickable area -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dialog Content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header -->
            <ImageView
                android:id="@+id/icon_debug"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_booking"
                android:background="@drawable/bg_circle_orange"
                android:padding="12dp"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/btn_close_x"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/text_secondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🐛 Modo Debug - Testing"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/icon_debug"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Hotel Info -->
            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_current_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado actual: Próximo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/ 0.00"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_current_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Divider -->
            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_total_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Taxi Configuration -->
            <TextView
                android:id="@+id/tv_taxi_config_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚕 Configuración de Taxi (Testing)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_taxi_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto mínimo:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_taxi_config_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_taxi_amount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F35D38"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_taxi_config_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_taxi_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:thumbColor="@color/orange_primary"
                app:trackColorActive="@color/orange_primary"
                app:trackColorInactive="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/tv_taxi_amount_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_taxi_eligibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ Necesita S/ 200 más para taxi"
                android:textSize="14sp"
                android:textColor="#E53935"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/slider_taxi_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Divider -->
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_taxi_eligibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- States Buttons Section -->
            <TextView
                android:id="@+id/tv_states_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 Cambiar Estado Manualmente"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Row 1: Upcoming and Active states -->
            <LinearLayout
                android:id="@+id/row_states_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_states_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upcoming"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="📅 Próximo"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_active"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="🏨 Check-in"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Row 2: Staying and Checkout Pending -->
            <LinearLayout
                android:id="@+id/row_states_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/row_states_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_staying"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="🛏️ Estadía"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_checkout_pending"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="⏳ Checkout"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Row 3: Completed states -->
            <LinearLayout
                android:id="@+id/row_states_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/row_states_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_completed_no_taxi"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:text="✅ Completado (Sin taxi)"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_completed_with_taxi"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:text="🚕 Completado (Con taxi)"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_completed_with_review"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="⭐ Completado (Review enviado)"
                    android:textSize="12sp"
                    android:backgroundTint="@color/text_secondary"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/row_states_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Action Buttons -->
            <TextView
                android:id="@+id/tv_actions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎬 Acciones de Testing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/row_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_actions_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_simulate_flow"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="🎬 Simular flujo completo"
                    android:textSize="11sp"
                    android:backgroundTint="@color/blue_primary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_services"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="➕ Agregar servicios"
                    android:textSize="11sp"
                    android:backgroundTint="@color/success_green"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Cerrar"
                android:textColor="@color/text_secondary"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/row_actions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>