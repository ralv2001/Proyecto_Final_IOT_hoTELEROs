<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_service_preview_compact">

    <!-- Icono del servicio -->
    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F8F9FA">

        <ImageView
            android:id="@+id/ivServiceIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi"
            app:tint="#FF5722"
            android:contentDescription="Icono de servicio" />
    </androidx.cardview.widget.CardView>

    <!-- Nombre del servicio -->
    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center" />

    <!-- Indicador de precio (opcional) -->
    <TextView
        android:id="@+id/tvServicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratis"
        android:textSize="8sp"
        android:textColor="#4CAF50"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_price_tag_compact"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:visibility="gone" />
</LinearLayout>