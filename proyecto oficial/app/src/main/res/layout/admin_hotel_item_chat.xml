<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <View
        android:id="@+id/statusIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/orange" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivClientAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/ivClientAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnChatAction"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente - Reserva #12345"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvReservationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel: Las Palmeras • 15-20 Abril 2025"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Último mensaje del cliente..."
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChatAction"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_primary"
            android:text="Responder"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>