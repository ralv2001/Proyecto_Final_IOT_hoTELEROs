<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_car_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto del Auto"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:drawableStart="@drawable/ic_car"
            android:drawableTint="#FF6B35"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <!-- Card contenedora de la imagen del auto -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_car_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:rippleColor="#33FF6B35"
            app:strokeWidth="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Imagen del auto -->
                <ImageView
                    android:id="@+id/iv_car_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_car_placeholder"
                    android:background="@drawable/car_image_background"
                    android:contentDescription="Foto del auto" />

                <!-- Overlay con gradiente -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay_car" />

                <!-- Contenedor del icono de cámara -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Icono de cámara -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#66000000">

                        <ImageView
                            android:id="@+id/iv_car_camera_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera"
                            app:tint="@android:color/white"
                            android:contentDescription="Cambiar foto del auto" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Texto -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Toca para cambiar foto"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Información adicional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Foto clara de tu vehículo para que los pasajeros puedan identificarlo fácilmente"
            android:textColor="#666666"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>