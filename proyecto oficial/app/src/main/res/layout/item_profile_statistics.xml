<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_stat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_taxi"
            app:tint="#FF5722"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_stat_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="127"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/iv_stat_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_stat_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_stat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viajes"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/tv_stat_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_stat_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este mes"
            android:textSize="10sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>