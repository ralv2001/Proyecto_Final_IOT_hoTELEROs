<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen del servicio -->
        <ImageView
            android:id="@+id/ivServicePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo"
            android:background="@android:color/white"
            tools:src="@drawable/ic_photo" />

        <!-- Overlay para interacción -->
        <View
            android:id="@+id/photoOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_overlay"
            android:clickable="true"
            android:focusable="true" />

        <!-- Badge del número de foto -->
        <TextView
            android:id="@+id/tvPhotoIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="6dp"
            android:background="@drawable/bg_circle_black_semi"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:minWidth="18dp"
            android:minHeight="18dp"
            android:paddingHorizontal="4dp"
            tools:text="1" />

        <!-- Indicador de carga -->
        <ProgressBar
            android:id="@+id/progressBarPhoto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/blue"
            tools:visibility="gone" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>