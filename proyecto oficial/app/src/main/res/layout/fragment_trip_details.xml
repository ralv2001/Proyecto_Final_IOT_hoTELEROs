<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- AppBar con elevación sutil y diseño mejorado -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Regresar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="#333333" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Detalles del Viaje"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="48dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal (scrollable) con fondo blanco -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="90dp">

            <!-- Tarjeta de Hotel con fondo blanco y borde sutil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hotel_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_hotel_banner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/belmond"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:layout_constraintTop_toBottomOf="@id/img_hotel_banner">

                        <TextView
                            android:id="@+id/tv_hotel_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Hotel Grand Plaza"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#212121"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_rating" />

                        <TextView
                            android:id="@+id/tv_hotel_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="San Miguel, Lima, Perú"
                            android:textSize="15sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1D1D1D"
                            android:background="@drawable/bg_rating_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableStart="@drawable/ic_star"
                            android:drawablePadding="4dp"
                            app:layout_constraintTop_toTopOf="@id/tv_hotel_name"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Información del servicio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stay_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_hotel_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_stay_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Servicio"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Horario de recogida -->
                    <ImageView
                        android:id="@+id/icon_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calenda"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_stay_info_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Horario de recogida"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/icon_calendar"
                        app:layout_constraintStart_toEndOf="@id/icon_calendar"
                        app:layout_constraintEnd_toStartOf="@id/tv_check_in_out" />

                    <TextView
                        android:id="@+id/tv_check_in_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoy, 14:30"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/icon_calendar"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Pasajeros -->
                    <ImageView
                        android:id="@+id/icon_guests"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_guests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pasajeros"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_guests"
                        app:layout_constraintBottom_toBottomOf="@id/icon_guests"
                        app:layout_constraintStart_toEndOf="@id/icon_guests"
                        app:layout_constraintEnd_toStartOf="@id/tv_number_of_guests" />

                    <TextView
                        android:id="@+id/tv_number_of_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 personas"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_guests"
                        app:layout_constraintBottom_toBottomOf="@id/icon_guests"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Cliente -->
                    <ImageView
                        android:id="@+id/icon_room"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_traveler_driver"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_guests"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_room_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_room"
                        app:layout_constraintBottom_toBottomOf="@id/icon_room"
                        app:layout_constraintStart_toEndOf="@id/icon_room"
                        app:layout_constraintEnd_toStartOf="@id/tv_room_type" />

                    <TextView
                        android:id="@+id/tv_room_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_room"
                        app:layout_constraintBottom_toBottomOf="@id/icon_room"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Tiempo estimado -->
                    <ImageView
                        android:id="@+id/icon_number"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock_driver"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_room"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_room_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tiempo estimado"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_number"
                        app:layout_constraintBottom_toBottomOf="@id/icon_number"
                        app:layout_constraintStart_toEndOf="@id/icon_number"
                        app:layout_constraintEnd_toStartOf="@id/tv_room_number" />

                    <TextView
                        android:id="@+id/tv_room_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 minutos"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_number"
                        app:layout_constraintBottom_toBottomOf="@id/icon_number"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Servicio de Taxi -->
                    <ImageView
                        android:id="@+id/icon_taxi"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_taxi"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#F44336" />

                    <TextView
                        android:id="@+id/label_transport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo de servicio"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_taxi"
                        app:layout_constraintBottom_toBottomOf="@id/icon_taxi"
                        app:layout_constraintStart_toEndOf="@id/icon_taxi"
                        app:layout_constraintEnd_toStartOf="@id/tv_free_transport" />

                    <TextView
                        android:id="@+id/tv_free_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traslado hotel-aeropuerto"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/icon_taxi"
                        app:layout_constraintBottom_toBottomOf="@id/icon_taxi"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Direcciones de Recogida/Destino -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_stay_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_address_details_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direcciones"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Origen y destino con iconos verticales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_address_details_title">

                        <!-- Línea de ruta con iconos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_hotel"
                                app:tint="#F44336"
                                android:layout_marginBottom="1dp"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_aiport"
                                app:tint="#F44336"
                                android:layout_marginTop="1dp"/>
                        </LinearLayout>

                        <!-- Direcciones -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_origin_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hotel Grand Plaza, Av. Principal 123, San Miguel"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginBottom="20dp"/>

                            <TextView
                                android:id="@+id/tv_destination_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aeropuerto Internacional Jorge Chávez, Callao"
                                android:textSize="14sp"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Precio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_price_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_address_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_price_details_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información de pago"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Precio del servicio -->
                    <TextView
                        android:id="@+id/label_room_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tarifa de servicio"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#212121"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_price_details_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_room_price_value" />

                    <TextView
                        android:id="@+id/tv_room_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 85.00"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/label_room_price"
                        app:layout_constraintBottom_toBottomOf="@id/label_room_price"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Método de pago -->
                    <TextView
                        android:id="@+id/label_additional_services"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Método de pago"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#212121"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/label_room_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_additional_services" />

                    <TextView
                        android:id="@+id/tv_additional_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago directo"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#212121"
                        app:layout_constraintTop_toTopOf="@id/label_additional_services"
                        app:layout_constraintBottom_toBottomOf="@id/label_additional_services"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Línea divisoria -->
                    <View
                        android:id="@+id/divider_price"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/label_additional_services"/>

                    <!-- Total -->
                    <TextView
                        android:id="@+id/label_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total a cobrar"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/divider_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_total_price" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 85.00"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        app:layout_constraintTop_toTopOf="@id/label_total_price"
                        app:layout_constraintBottom_toBottomOf="@id/label_total_price"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Información adicional con fondo blanco y borde sutil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_additional_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/card_price_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <ImageView
                        android:id="@+id/icon_info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#536DFE" />
                    <TextView
                        android:id="@+id/tv_additional_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="El cliente espera en el lobby del hotel. Tiene 2 maletas grandes. Se dirige al aeropuerto para tomar un vuelo internacional."
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#757575"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/icon_info"
                        app:layout_constraintStart_toEndOf="@id/icon_info"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón de aceptar viaje (fijo abajo) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_reservation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Aceptar Viaje"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FF5722"
                app:cornerRadius="28dp"
                android:elevation="4dp"
                android:enabled="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Overlay para dialogo de confirmación (inicialmente invisible) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmation_dialog_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/confirmation_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintWidth_max="340dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_success"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_check_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#4CAF50" />

                <TextView
                    android:id="@+id/tv_success_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="¡Viaje Aceptado!"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/icon_success" />

                <TextView
                    android:id="@+id/tv_success_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Has aceptado el viaje exitosamente. Se ha notificado al cliente que estás en camino."
                    android:textColor="#757575"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_success_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Aceptar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:backgroundTint="#FF5722"
                    app:cornerRadius="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_success_message" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>