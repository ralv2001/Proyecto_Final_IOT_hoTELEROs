<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".auth.password.CreateNewPasswordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">

            <!-- Botón de retroceso -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/custom_back_button"
                android:background="@null"
                android:layout_marginBottom="20dp"
                android:contentDescription="Volver" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Establecer una nueva contraseña"
                android:textSize="20sp"
                android:textColor="#1E1E1E"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="-0.025"
                android:lineSpacingExtra="0dp"
                android:layout_marginBottom="12dp"/>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cree una nueva contraseña. Asegúrese de que sea diferente de las anteriores por seguridad"
                android:textSize="16sp"
                android:textColor="#989898"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="-0.025"
                android:lineSpacingExtra="4sp"
                android:layout_marginBottom="32dp"/>

            <!-- Nueva Contraseña -->
            <TextView
                android:id="@+id/tvContrasenaLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nueva contraseña" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:hint="Ingrese su nueva contraseña"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingVertical="18dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="48dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ibTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:src="@drawable/ic_visibility_custom"
                    android:contentDescription="Toggle password visibility" />
            </RelativeLayout>

            <!-- Barra de progreso para requisitos de contraseña -->
            <ImageView
                android:id="@+id/passwordStrengthBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/progress_bar_0"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp" />

            <!-- Requisitos de contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ivReq1Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entre 8 y 32 caracteres"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ivReq2Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="un número y un símbolo"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivReq3Icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sin_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReq3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="una mayúscula"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#989898" />
                </LinearLayout>
            </LinearLayout>

            <!-- Confirmar Contraseña -->
            <TextView
                android:id="@+id/tvConfirmarContrasenaLabel"
                style="@style/FormLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Confirmar Nueva Contraseña" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/etConfirmarContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:hint="Confirme su nueva contraseña"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingVertical="18dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="48dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ibToggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:src="@drawable/ic_visibility_custom"
                    android:contentDescription="Toggle password visibility" />
            </RelativeLayout>

            <!-- Botón para continuar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"
                android:text="Actualizar Contraseña"
                android:paddingVertical="18dp"
                style="@style/ButtonTextStyle"
                android:enabled="false"
                android:alpha="0.4"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>