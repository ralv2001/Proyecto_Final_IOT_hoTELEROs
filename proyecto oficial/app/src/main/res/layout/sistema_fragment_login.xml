<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.login.LoginFragment"
    android:background="#FFFFFF"
    android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cr40bffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmailLabel"
                    style="@style/FormLabelStyle"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Correo electrónico"
                    />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:hint="Ingrese su correo electrónico"
                    android:textColorHint="#61989898"
                    android:textColor="#545454"
                    android:inputType="textEmailAddress"
                    android:paddingVertical="18dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="42dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="26dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/tvPasswordLabel"
                    style="@style/FormLabelStyle"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Contraseña"
                    />

                <LinearLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/se1e1e1sw2cr12"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="21dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:hint="Ingrese su contraseña"
                        android:textColorHint="#61989898"
                        android:textColor="#545454"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        />

                    <ImageButton
                        android:id="@+id/ibTogglePassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_visibility_custom"
                        android:background="@null"
                        android:contentDescription="Toggle password visibility"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/errorMessageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        style="@style/FormHelperTextStyle"
                        android:textColor="#D9D9D9"
                        android:layout_marginEnd="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Contraseña incorrecta"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        style="@style/FormHelperTextStyle"
                        android:textColor="#F35D38"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="¿Olvidaste tu contraseña?"
                        />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#F35D38"
                    app:cornerRadius="12dp"
                    android:text="Continuar"
                    app:textAllCaps="false"
                    android:paddingVertical="18dp"
                    android:layout_marginBottom="33dp"
                    android:layout_marginHorizontal="26dp"
                    style="@style/ButtonTextStyle"
                    android:enabled="false"
                    android:alpha="0.4" />

                <LinearLayout
                    android:id="@+id/separatorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E1E1E1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E1E1E1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="16dp"
                        android:text="Ó"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E1E1E1"
                        />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFacebookLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#E1E1E1"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_facebook_custom"
                    app:iconGravity="textStart"
                    app:iconTint="@null"
                    app:iconPadding="8dp"
                    app:iconSize="24dp"
                    android:textColor="#2A2A2A"
                    style="@style/SocialButtonTextStyle"
                    android:text="Iniciar sesión con Facebook"
                    android:paddingVertical="15dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="26dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogleLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#E1E1E1"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_google_custom"
                    app:iconGravity="textStart"
                    app:iconTint="@null"
                    app:iconPadding="8dp"
                    app:iconSize="24dp"
                    android:textColor="#2A2A2A"
                    style="@style/SocialButtonTextStyle"
                    android:text="Iniciar sesión con Google"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="26dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNoAccount"
                        style="@style/RegisterPromptStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿No tienes una cuenta? "
                        />

                    <TextView
                        android:id="@+id/tvRegisterPrompt"
                        style="@style/RegisterPromptStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Regístrate"
                        android:textColor="#F35D38"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>