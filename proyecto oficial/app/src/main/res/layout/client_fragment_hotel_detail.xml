<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_hotel_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior con botón de retroceso y favoritos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_favorite_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Añadir a favoritos"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView para contenido scrolleable -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_choose_room_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Galería de imágenes -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gallery_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_hotel_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/overlay_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_gallery_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_previous_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/bg_gallery_button"
                    android:alpha="0.8"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Anterior"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_next_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/bg_gallery_button"
                    android:alpha="0.8"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Siguiente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_image_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/4"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_image_counter"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/btn_see_all_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todas las fotos"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_see_all_photos"
                    android:layout_margin="16dp"
                    app:drawableStartCompat="@drawable/ic_gallery"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image_thumbnails"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Información del hotel -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hotel_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/gallery_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Nombre del hotel -->
                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Belmond Miraflores Park"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/hotel_rating_container" />

                <!-- Contenedor de rating -->
                <LinearLayout
                    android:id="@+id/hotel_rating_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rounded_rating"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintTop_toTopOf="@id/tv_hotel_name"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Rating" />

                    <TextView
                        android:id="@+id/tv_hotel_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Ubicación -->
                <LinearLayout
                    android:id="@+id/hotel_location_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="Ubicación" />

                    <TextView
                        android:id="@+id/tv_hotel_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miraflores, frente al malecón, Lima"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ✅ NUEVA SECCIÓN DEL MAPA -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/hotel_info_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Título del mapa -->
                <TextView
                    android:id="@+id/tv_map_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Contenedor del mapa con bordes redondeados -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/map_card_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_map_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Fragment del mapa -->
                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map_fragment"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <!-- Botón para abrir en Google Maps -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_in_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Abrir en Google Maps"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/accent"
                    app:icon="@drawable/ic_directions"
                    app:iconSize="16dp"
                    app:iconTint="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/map_card_container"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Servicios del hotel (modificado para referenciar el nuevo contenedor) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/services_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/map_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_services_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios del hotel"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_see_all_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todo"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintTop_toTopOf="@id/tv_services_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_services_title"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_services_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_services_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- ✅ ESTANCIA - MANTENER COMO ESTABA -->
                <TextView
                    android:id="@+id/tv_stay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estancia"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_services_preview"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Duración de la estancia -->
                <TextView
                    android:id="@+id/tv_stay_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 noches"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_stay_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Fechas de estancia -->
                <TextView
                    android:id="@+id/tv_stay_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 octubre - 7 octubre | 2 adultos"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="@id/tv_stay_dates"
                    app:layout_constraintBottom_toBottomOf="@id/tv_stay_dates"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Lugares turísticos cercanos -->
                <TextView
                    android:id="@+id/tv_nearby_places_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugares turísticos cercanos"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_stay_dates"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_nearby_places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_nearby_places_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/client_item_city_card" />

                <!-- ✅ RESEÑAS - MANTENER COMO ESTABA -->
                <TextView
                    android:id="@+id/tv_reviews_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reseñas"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_nearby_places"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_see_all_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todas"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintTop_toTopOf="@id/tv_reviews_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_reviews_title"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- ListView para reseñas (limitado en altura) -->
                <LinearLayout
                    android:id="@+id/reviews_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_reviews_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Reseña 1 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_reviewer_avatar1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/perfil"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#E0E0E0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_reviewer_name1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Adrián López"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/iv_reviewer_avatar1"
                            app:layout_constraintStart_toEndOf="@id/iv_reviewer_avatar1"
                            app:layout_constraintEnd_toStartOf="@id/rating_review1" />

                        <TextView
                            android:id="@+id/tv_review_date1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="2 días atrás"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_reviewer_name1"
                            app:layout_constraintStart_toEndOf="@id/iv_reviewer_avatar1"
                            app:layout_constraintEnd_toStartOf="@id/rating_review1" />

                        <LinearLayout
                            android:id="@+id/rating_review1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="@id/iv_reviewer_avatar1"
                            app:layout_constraintBottom_toBottomOf="@id/tv_review_date1"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Reseña 2 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_reviewer_avatar2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/perfil"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#E0E0E0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_reviewer_name2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Ximena Sánchez"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/iv_reviewer_avatar2"
                            app:layout_constraintStart_toEndOf="@id/iv_reviewer_avatar2"
                            app:layout_constraintEnd_toStartOf="@id/rating_review2" />

                        <TextView
                            android:id="@+id/tv_review_date2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="5 días atrás"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_reviewer_name2"
                            app:layout_constraintStart_toEndOf="@id/iv_reviewer_avatar2"
                            app:layout_constraintEnd_toStartOf="@id/rating_review2" />

                        <LinearLayout
                            android:id="@+id/rating_review2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="@id/iv_reviewer_avatar2"
                            app:layout_constraintBottom_toBottomOf="@id/tv_review_date2"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Contenedor para el botón de elegir habitación -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_choose_room_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Precio y descripción -->
        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_hotel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/2,050"
                android:textSize="20sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tv_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="por 4 noches"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Botón de elegir habitación -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_choose_room"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Elegir habitación"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_orange_button"
            app:backgroundTint="#FF5722"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/price_container"
            app:layout_constraintEnd_toEndOf="parent" />
