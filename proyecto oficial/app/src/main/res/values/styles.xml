<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cr40">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="FormLabelStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">#2A2A2A</item>
    </style>

    <style name="FormInputStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">#F35D38</item> <!-- Un poco más oscuro que #545454 -->
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textCursorDrawable">@null</item> <!-- Esto hará que el cursor use el mismo color que el texto -->
    </style>

    <style name="FormHelperTextStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item> <!-- equivalente a -0.5px para un texto de 14sp -->
    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item> <!-- equivalente a -0.5px para un texto de 16sp -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item> <!-- Importante para mantener la capitalización exacta -->
    </style>

    <style name="SocialButtonTextStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">#2A2A2A</item>
    </style>

    <style name="RegisterPromptStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item> <!-- equivalente a -0.5px para 16sp -->
        <item name="android:lineSpacingExtra">4sp</item> <!-- Para conseguir altura de línea de 20px -->
        <item name="android:textColor">#989898</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colores personalizados -->
        <item name="android:textColorPrimary">#F35D38</item>
        <item name="android:editTextColor">#F35D38</item>
        <item name="android:textColor">#F35D38</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppsitoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colores personalizados -->
        <item name="android:textColorPrimary">#F35D38</item>
        <item name="android:editTextColor">#F35D38</item>
        <item name="android:textColor">#F35D38</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.025</item> <!-- -0.5px para 20sp -->
        <item name="android:includeFontPadding">false</item> <!-- Elimina el padding extra alrededor del texto -->
    </style>

    <style name="ActiveTabTextStyle" parent="TabTextStyle">
        <item name="android:textColor">#F35D38</item>
    </style>

    <style name="InactiveTabTextStyle" parent="TabTextStyle">
        <item name="android:textColor">#D9D9D9</item>
    </style>

    <style name="GuestContinueTextStyle">
        <item name="android:fontFamily">@font/inter_18pt_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">#0C0D0E</item>
    </style>


    <style name="roundedImageViewLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>
    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Theme.MiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- otros atributos -->
    </style>

    <style name="RoundedImageView20dp"></style>

    <style name="roundedCornerImageLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <!-- Cambios en styles.xml -->
    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <!-- Cambiamos el fondo transparente por el color que deseas (blanco o el que uses) -->
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@drawable/bg_bottom_sheet_rounded</item>
        <item name="behavior_peekHeight">600dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_fitToContents">true</item> <!-- Cambio a true para ajustarse al contenido -->
        <item name="shapeAppearance">@style/CustomShapeAppearanceBottomSheet</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <!-- Base application theme with proper system UI handling -->
    <style name="Theme.HotelerApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">#388E3C</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.HotelerApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HotelerApp.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HotelerApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HotelerApp.Body2</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.HotelerApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.HotelerApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.HotelerApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.HotelerApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <!-- Configuration for enabling proper status bar -->
    <style name="Theme.HotelerApp.StatusBar" parent="Theme.HotelerApp">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="InterMediumTextStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

</resources>