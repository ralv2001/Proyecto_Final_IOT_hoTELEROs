<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C62828" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#B71C1C" />
        </shape>
    </item>

    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#E1BEE7" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" />
            <corners android:radius="12dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>