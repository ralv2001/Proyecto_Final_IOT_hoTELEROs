+        holder.tvTitle.setText(menuItem.getTitle());
+        holder.tvSubtitle.setText(menuItem.getSubtitle());
+        holder.ivIcon.setImageResource(menuItem.getIconResId());
+        holder.ivArrow.setVisibility(menuItem.hasArrow() ? View.VISIBLE : View.GONE);
+
+        // Configurar colores según el tipo de opción
+        int backgroundColor, iconColor;
+        switch (menuItem.getTitle()) {
+            case "Ver Perfil":
+                backgroundColor = 0xFFE3F2FD; // Azul claro
+                iconColor = 0xFF2196F3; // Azul
+                break;
+            case "Métodos de pago":
+                backgroundColor = 0xFFF3E5F5; // Púrpura claro
+                iconColor = 0xFF9C27B0; // Púrpura
+                break;
+            case "Notificaciones":
+                backgroundColor = 0xFFE8F5E8; // Verde claro
+                iconColor = 0xFF4CAF50; // Verde
+                break;
+            case "Cerrar sesión":
+                backgroundColor = 0xFFFFEBEE; // Rojo claro
+                iconColor = 0xFFE53935; // Rojo
+                break;
+            default:
+                backgroundColor = 0xFFF5F5F5; // Gris claro por defecto
+                iconColor = 0xFF757575; // Gris oscuro
+                break;
+        }
+
+        holder.cardIconBackground.setCardBackgroundColor(backgroundColor);
+        holder.ivIcon.setColorFilter(iconColor);
+
+        if (menuItem.getSubtitle() != null && !menuItem.getSubtitle().isEmpty()) {
+            holder.tvSubtitle.setVisibility(View.VISIBLE);
+        } else {
+            holder.tvSubtitle.setVisibility(View.GONE);
+        }
+
+        // Manejar click especial para cerrar sesión
+        holder.itemView.setOnClickListener(v -> {
+            if (listener != null) {
+                if ("Cerrar sesión".equals(menuItem.getTitle())) {
+                    listener.onLogoutClick(); // Llamar método específico
+                } else {
+                    listener.onMenuItemClick(menuItem);
+                }
+            }
+        });
+    }
+
+    @Override
+    public int getItemCount() {
+        return items.size();
+    }
+
+    // ViewHolders
+    static class HeaderViewHolder extends RecyclerView.ViewHolder {
+        ImageView ivProfileImage;
+        TextView tvClientName;
+        TextView tvClientEmail;
+        TextView tvMemberSince;
+        TextView tvRating;
+        TextView tvTotalReservations;
+        TextView tvTotalSpent;
